{
  "lexicon": {
    "version": "1.0",
    "service": {
      "name": "exprsn-prefetch",
      "version": "1.0.0",
      "description": "Timeline Prefetching Service"
    },
    "routes": [
      {
        "path": "/api/prefetch/trigger",
        "method": "POST",
        "description": "Trigger timeline prefetch for user",
        "target": {
          "service": "prefetch",
          "path": "/api/prefetch",
          "timeout": 5000
        },
        "auth": {
          "required": true,
          "permissions": {
            "write": true
          }
        },
        "validation": {
          "body": {
            "type": "object",
            "required": ["userId"],
            "properties": {
              "userId": {
                "type": "string",
                "format": "uuid"
              },
              "tier": {
                "type": "string",
                "enum": ["hot", "warm"],
                "default": "hot"
              },
              "force": {
                "type": "boolean",
                "default": false
              }
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 30
        }
      },
      {
        "path": "/api/prefetch/status/:userId",
        "method": "GET",
        "description": "Get prefetch status for user",
        "target": {
          "service": "prefetch",
          "path": "/api/prefetch/status/:userId",
          "timeout": 2000
        },
        "auth": {
          "required": true,
          "permissions": {
            "read": true
          }
        },
        "validation": {
          "params": {
            "userId": {
              "type": "string",
              "format": "uuid"
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 100
        }
      },
      {
        "path": "/api/prefetch/cache/:userId",
        "method": "DELETE",
        "description": "Clear prefetch cache for user",
        "target": {
          "service": "prefetch",
          "path": "/api/prefetch/cache/:userId",
          "timeout": 3000
        },
        "auth": {
          "required": true,
          "permissions": {
            "delete": true
          }
        },
        "validation": {
          "params": {
            "userId": {
              "type": "string",
              "format": "uuid"
            }
          }
        },
        "rateLimit": {
          "windowMs": 300000,
          "max": 10
        }
      },
      {
        "path": "/api/prefetch/health",
        "method": "GET",
        "description": "Prefetch service health check",
        "target": {
          "service": "prefetch",
          "path": "/health",
          "timeout": 2000
        },
        "auth": {
          "required": false
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 300
        }
      }
    ],
    "policies": {
      "defaultAuth": true,
      "defaultRateLimit": {
        "windowMs": 900000,
        "max": 500
      },
      "cors": {
        "origin": "*",
        "credentials": true
      }
    }
  }
}
