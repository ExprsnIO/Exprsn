{
  "lexicon": {
    "version": "1.0",
    "service": {
      "name": "exprsn-live",
      "version": "1.0.0",
      "description": "Live Streaming Service"
    },
    "routes": [
      {
        "path": "/api/live/streams",
        "method": "GET",
        "description": "List live streams",
        "target": {
          "service": "live",
          "path": "/api/live/streams",
          "timeout": 5000
        },
        "auth": {
          "required": true,
          "permissions": {
            "read": true
          },
          "certificateBinding": false
        },
        "validation": {
          "query": {
            "page": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            },
            "limit": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            },
            "status": {
              "type": "string",
              "enum": ["live", "scheduled", "ended"]
            },
            "category": {
              "type": "string"
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 100
        }
      },
      {
        "path": "/api/live/streams",
        "method": "POST",
        "description": "Create new stream",
        "target": {
          "service": "live",
          "path": "/api/live/streams",
          "timeout": 10000
        },
        "auth": {
          "required": true,
          "permissions": {
            "write": true
          }
        },
        "validation": {
          "body": {
            "type": "object",
            "required": ["title"],
            "properties": {
              "title": {
                "type": "string",
                "minLength": 1,
                "maxLength": 200
              },
              "description": {
                "type": "string",
                "maxLength": 2000
              },
              "category": {
                "type": "string",
                "maxLength": 50
              },
              "isPrivate": {
                "type": "boolean",
                "default": false
              },
              "scheduledFor": {
                "type": "string",
                "format": "date-time"
              },
              "maxViewers": {
                "type": "integer",
                "minimum": 1
              },
              "allowChat": {
                "type": "boolean",
                "default": true
              },
              "recordStream": {
                "type": "boolean",
                "default": false
              }
            }
          }
        },
        "rateLimit": {
          "windowMs": 300000,
          "max": 10
        }
      },
      {
        "path": "/api/live/streams/:id",
        "method": "GET",
        "description": "Get stream details",
        "target": {
          "service": "live",
          "path": "/api/live/streams/:id",
          "timeout": 3000
        },
        "auth": {
          "required": true,
          "permissions": {
            "read": true
          }
        },
        "validation": {
          "params": {
            "id": {
              "type": "string",
              "format": "uuid"
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 200
        }
      },
      {
        "path": "/api/live/streams/:id",
        "method": "DELETE",
        "description": "Delete stream",
        "target": {
          "service": "live",
          "path": "/api/live/streams/:id",
          "timeout": 5000
        },
        "auth": {
          "required": true,
          "permissions": {
            "delete": true
          }
        },
        "validation": {
          "params": {
            "id": {
              "type": "string",
              "format": "uuid"
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 20
        }
      },
      {
        "path": "/api/live/rooms",
        "method": "GET",
        "description": "List virtual rooms",
        "target": {
          "service": "live",
          "path": "/api/live/rooms",
          "timeout": 5000
        },
        "auth": {
          "required": true,
          "permissions": {
            "read": true
          }
        },
        "validation": {
          "query": {
            "page": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            },
            "limit": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            },
            "status": {
              "type": "string",
              "enum": ["active", "inactive"]
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 100
        }
      },
      {
        "path": "/api/live/rooms",
        "method": "POST",
        "description": "Create virtual room",
        "target": {
          "service": "live",
          "path": "/api/live/rooms",
          "timeout": 5000
        },
        "auth": {
          "required": true,
          "permissions": {
            "write": true
          }
        },
        "validation": {
          "body": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "description": {
                "type": "string",
                "maxLength": 1000
              },
              "maxParticipants": {
                "type": "integer",
                "minimum": 2,
                "maximum": 100,
                "default": 10
              },
              "isPublic": {
                "type": "boolean",
                "default": true
              },
              "requirePassword": {
                "type": "boolean",
                "default": false
              },
              "password": {
                "type": "string",
                "minLength": 4,
                "maxLength": 50
              },
              "enableVideo": {
                "type": "boolean",
                "default": true
              },
              "enableAudio": {
                "type": "boolean",
                "default": true
              },
              "enableScreenShare": {
                "type": "boolean",
                "default": true
              },
              "enableChat": {
                "type": "boolean",
                "default": true
              }
            }
          }
        },
        "rateLimit": {
          "windowMs": 300000,
          "max": 20
        }
      },
      {
        "path": "/api/live/rooms/:id/join",
        "method": "POST",
        "description": "Join virtual room",
        "target": {
          "service": "live",
          "path": "/api/live/rooms/:id/join",
          "timeout": 5000
        },
        "auth": {
          "required": true,
          "permissions": {
            "write": true
          }
        },
        "validation": {
          "params": {
            "id": {
              "type": "string",
              "format": "uuid"
            }
          },
          "body": {
            "type": "object",
            "properties": {
              "password": {
                "type": "string",
                "minLength": 4,
                "maxLength": 50
              },
              "displayName": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50
              }
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 50
        }
      },
      {
        "path": "/api/live/recordings",
        "method": "GET",
        "description": "List stream recordings",
        "target": {
          "service": "live",
          "path": "/api/live/recordings",
          "timeout": 5000
        },
        "auth": {
          "required": true,
          "permissions": {
            "read": true
          }
        },
        "validation": {
          "query": {
            "streamId": {
              "type": "string",
              "format": "uuid"
            },
            "page": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            },
            "limit": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 100
        }
      },
      {
        "path": "/api/live/recordings/:id/start",
        "method": "POST",
        "description": "Start recording stream",
        "target": {
          "service": "live",
          "path": "/api/live/recordings/:id/start",
          "timeout": 5000
        },
        "auth": {
          "required": true,
          "permissions": {
            "write": true
          }
        },
        "validation": {
          "params": {
            "id": {
              "type": "string",
              "format": "uuid"
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 20
        }
      },
      {
        "path": "/api/live/recordings/:id/stop",
        "method": "POST",
        "description": "Stop recording stream",
        "target": {
          "service": "live",
          "path": "/api/live/recordings/:id/stop",
          "timeout": 5000
        },
        "auth": {
          "required": true,
          "permissions": {
            "write": true
          }
        },
        "validation": {
          "params": {
            "id": {
              "type": "string",
              "format": "uuid"
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 20
        }
      },
      {
        "path": "/api/live/recordings/:id/playback",
        "method": "GET",
        "description": "Get recording playback URL",
        "target": {
          "service": "live",
          "path": "/api/live/recordings/:id/playback",
          "timeout": 3000
        },
        "auth": {
          "required": true,
          "permissions": {
            "read": true
          }
        },
        "validation": {
          "params": {
            "id": {
              "type": "string",
              "format": "uuid"
            }
          }
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 100
        }
      }
    ],
    "policies": {
      "defaultAuth": true,
      "defaultRateLimit": {
        "windowMs": 900000,
        "max": 2000
      },
      "cors": {
        "origin": "*",
        "credentials": true
      }
    }
  }
}
