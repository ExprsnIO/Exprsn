# Application Configuration
NODE_ENV=development
PORT=3017
SERVICE_NAME=exprsn-workflow

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exprsn_workflow
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CA Token Configuration
CA_URL=http://localhost:3000
CA_TOKEN_VALIDATION_ENABLED=true
CA_CERTIFICATE_ID=
CA_PRIVATE_KEY_PATH=

# Workflow Configuration
WORKFLOW_MAX_EXECUTION_TIME=300000
WORKFLOW_MAX_STEPS=100
WORKFLOW_MAX_ITERATIONS=1000
WORKFLOW_ENABLE_VM_EXECUTION=true
WORKFLOW_VM_TIMEOUT=30000
WORKFLOW_VM_MAX_MEMORY=128

# JSONLex Configuration
JSONLEX_ENABLED=true
JSONLEX_VALIDATION_STRICT=false

# RBAC Configuration
RBAC_ENABLED=true
RBAC_DEFAULT_ROLE=viewer
RBAC_SUPER_ADMIN_ROLE=admin

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/exprsn-workflow.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Socket.IO Configuration
SOCKETIO_ENABLED=true
SOCKETIO_PATH=/socket.io
SOCKETIO_CORS_ORIGIN=*

# Background Jobs
BULL_ENABLED=true
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_CONCURRENCY=5

# Feature Flags
ENABLE_VISUAL_DESIGNER=true
ENABLE_TEMPLATES=true
ENABLE_WORKFLOW_VERSIONING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_WORKFLOW_SCHEDULING=true
