# Environment
NODE_ENV=development

# Service Configuration
AUTH_SERVICE_PORT=3001
AUTH_SERVICE_HOST=localhost

# TLS/HTTPS Configuration
TLS_ENABLED=true
TLS_CERT_PATH=./certs/localhost-cert.pem
TLS_KEY_PATH=./certs/localhost-key.pem

# Database
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432
AUTH_DB_NAME=exprsn_auth
AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=postgres
DB_LOGGING=false

# Database connection pool settings
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CA Integration
CA_URL=https://localhost:3000
CA_REQUIRED=false
CA_WAIT=true
CA_MAX_ATTEMPTS=10
AUTH_CA_DOMAIN=auth.exprsn.io
AUTH_CERT_SERIAL=
AUTH_PRIVATE_KEY_PATH=
AUTH_CERTIFICATE_PATH=
CA_ROOT_CERT_PATH=
OCSP_RESPONDER_URL=https://localhost:2560

# Session Configuration
SESSION_SECRET=change-this-in-production
SESSION_LIFETIME=3600000
SESSION_IDLE_TIMEOUT=900000

# OAuth2 Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# Security
REQUIRE_MFA=false
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Encryption key for sensitive data (32-byte hex)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# Frontend
FRONTEND_URL=http://localhost:3000

# CORS (comma-separated origins for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
