<div class="card">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-people text-primary me-2"></i>
            User Management
        </h5>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createUserModal">
            <i class="bi bi-person-plus"></i> Create User
        </button>
    </div>
    <div class="card-body">
        <!-- Search and Filter -->
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text"
                           class="form-control"
                           id="userSearch"
                           placeholder="Search users by username or email..."
                           aria-label="Search users">
                </div>
            </div>
            <div class="col-md-6">
                <select class="form-select" id="statusFilter" aria-label="Filter by status">
                    <option value="">All Status</option>
                    <option value="verified">Verified</option>
                    <option value="unverified">Unverified</option>
                    <option value="disabled">Disabled</option>
                </select>
            </div>
        </div>

        <!-- Users Table -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Last Login</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users && users.length > 0) { %>
                        <% users.forEach(user => { %>
                        <tr>
                            <td>
                                <i class="bi bi-person-circle text-primary me-2"></i>
                                <strong><%= user.username %></strong>
                            </td>
                            <td><%= user.email %></td>
                            <td>
                                <% if (!user.enabled) { %>
                                <span class="badge badge-status bg-danger">
                                    <i class="bi bi-x-circle"></i> Disabled
                                </span>
                                <% } else if (user.emailVerified) { %>
                                <span class="badge badge-status bg-success">
                                    <i class="bi bi-check-circle"></i> Verified
                                </span>
                                <% } else { %>
                                <span class="badge badge-status bg-warning text-dark">
                                    <i class="bi bi-exclamation-circle"></i> Unverified
                                </span>
                                <% } %>
                            </td>
                            <td>
                                <% if (user.lastLogin) { %>
                                <small><%= new Date(user.lastLogin).toLocaleString() %></small>
                                <% } else { %>
                                <small class="text-muted">Never</small>
                                <% } %>
                            </td>
                            <td>
                                <small><%= new Date(user.createdAt).toLocaleDateString() %></small>
                            </td>
                            <td class="table-actions">
                                <div class="btn-group" role="group" aria-label="User actions">
                                    <a href="/admin/users/<%= user.id %>"
                                       class="btn btn-sm btn-outline-primary"
                                       aria-label="View user <%= user.username %>">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-secondary"
                                            data-action="edit"
                                            data-user-id="<%= user.id %>"
                                            aria-label="Edit user <%= user.username %>">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <% if (user.enabled) { %>
                                    <button class="btn btn-sm btn-outline-warning"
                                            data-action="disable"
                                            data-user-id="<%= user.id %>"
                                            aria-label="Disable user <%= user.username %>">
                                        <i class="bi bi-slash-circle"></i>
                                    </button>
                                    <% } else { %>
                                    <button class="btn btn-sm btn-outline-success"
                                            data-action="enable"
                                            data-user-id="<%= user.id %>"
                                            aria-label="Enable user <%= user.username %>">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No users found
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <% if (pagination.totalPages > 1) { %>
        <nav aria-label="User pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= pagination.page - 1 %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
                <% } %>

                <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= pagination.page + 1 %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

        <p class="text-center text-muted">
            Showing <%= (pagination.page - 1) * 20 + 1 %>-<%= Math.min(pagination.page * 20, pagination.total) %>
            of <%= pagination.total %> users
        </p>
        <% } %>
    </div>
</div>

<!-- Create User Modal -->
<div class="modal fade" id="createUserModal" tabindex="-1" aria-labelledby="createUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createUserModalLabel">
                    <i class="bi bi-person-plus text-primary me-2"></i>
                    Create New User
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createUserForm" method="POST" action="/api/users">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="emailVerified" name="emailVerified">
                            <label class="form-check-label" for="emailVerified">
                                Mark email as verified
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create User</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% locals.scripts = `
<script>
    // User search functionality
    document.getElementById('userSearch').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');

        rows.forEach(row => {
            const username = row.cells[0]?.textContent.toLowerCase() || '';
            const email = row.cells[1]?.textContent.toLowerCase() || '';

            if (username.includes(searchTerm) || email.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // Status filter
    document.getElementById('statusFilter').addEventListener('change', function(e) {
        const status = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');

        rows.forEach(row => {
            const statusBadge = row.cells[2]?.textContent.toLowerCase() || '';

            if (!status || statusBadge.includes(status)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // User actions
    document.querySelectorAll('[data-action]').forEach(btn => {
        btn.addEventListener('click', async function() {
            const action = this.dataset.action;
            const userId = this.dataset.userId;

            if (confirm(\`Are you sure you want to \${action} this user?\`)) {
                try {
                    const response = await fetch(\`/api/users/\${userId}/\${action}\`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });

                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Action failed. Please try again.');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('An error occurred. Please try again.');
                }
            }
        });
    });
</script>
`; %>
