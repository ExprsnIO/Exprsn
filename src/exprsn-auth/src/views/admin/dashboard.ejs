<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card stat-card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Total Users</h6>
                        <h2 class="mb-0"><%= stats.users %></h2>
                    </div>
                    <div class="text-primary fs-1">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card h-100" style="border-left-color: var(--exprsn-success);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Organizations</h6>
                        <h2 class="mb-0"><%= stats.organizations %></h2>
                    </div>
                    <div class="text-success fs-1">
                        <i class="bi bi-building"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card h-100" style="border-left-color: var(--exprsn-warning);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Applications</h6>
                        <h2 class="mb-0"><%= stats.applications %></h2>
                    </div>
                    <div class="text-warning fs-1">
                        <i class="bi bi-app-indicator"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card h-100" style="border-left-color: var(--exprsn-danger);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Active Sessions</h6>
                        <h2 class="mb-0"><%= stats.activeSessions %></h2>
                    </div>
                    <div class="text-danger fs-1">
                        <i class="bi bi-clock-history"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row g-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history text-primary me-2"></i>
                    Recent Users
                </h5>
                <a href="/admin/users" class="btn btn-sm btn-outline-primary">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (recentUsers && recentUsers.length > 0) { %>
                                <% recentUsers.forEach(user => { %>
                                <tr>
                                    <td>
                                        <i class="bi bi-person-circle text-primary me-2"></i>
                                        <strong><%= user.username %></strong>
                                    </td>
                                    <td><%= user.email %></td>
                                    <td>
                                        <% if (user.emailVerified) { %>
                                        <span class="badge badge-status bg-success">
                                            <i class="bi bi-check-circle"></i> Verified
                                        </span>
                                        <% } else { %>
                                        <span class="badge badge-status bg-warning text-dark">
                                            <i class="bi bi-exclamation-circle"></i> Unverified
                                        </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <small><%= new Date(user.createdAt).toLocaleDateString() %></small>
                                    </td>
                                    <td class="table-actions">
                                        <a href="/admin/users/<%= user.id %>"
                                           class="btn btn-sm btn-outline-primary"
                                           aria-label="View user <%= user.username %>">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        No users found
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle text-primary me-2"></i>
                    Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/admin/users?action=create" class="btn btn-primary">
                        <i class="bi bi-person-plus"></i> Create User
                    </a>
                    <a href="/admin/organizations?action=create" class="btn btn-success">
                        <i class="bi bi-building"></i> Create Organization
                    </a>
                    <a href="/admin/applications?action=create" class="btn btn-warning">
                        <i class="bi bi-app-indicator"></i> Register Application
                    </a>
                    <a href="/admin/roles?action=create" class="btn btn-info">
                        <i class="bi bi-key"></i> Create Role
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="bi bi-gear text-primary me-2"></i>
                    System Status
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Database</span>
                    <span class="badge bg-success">Connected</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Redis Cache</span>
                    <span class="badge bg-success">Active</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>OAuth2</span>
                    <span class="badge bg-success">Enabled</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>SAML</span>
                    <span class="badge bg-secondary">Disabled</span>
                </div>
            </div>
        </div>
    </div>
</div>
