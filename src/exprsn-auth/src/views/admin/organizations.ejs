<div class="card">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-building text-primary me-2"></i>
            Organization Management
        </h5>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createOrgModal">
            <i class="bi bi-plus-circle"></i> Create Organization
        </button>
    </div>
    <div class="card-body">
        <!-- Search and Filter -->
        <div class="row mb-3">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text"
                           class="form-control"
                           id="orgSearch"
                           placeholder="Search organizations by name or domain..."
                           aria-label="Search organizations">
                </div>
            </div>
            <div class="col-md-4">
                <select class="form-select" id="statusFilter" aria-label="Filter by status">
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="suspended">Suspended</option>
                </select>
            </div>
        </div>

        <!-- Organizations Table -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Organization</th>
                        <th>Domain</th>
                        <th>Users</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (organizations && organizations.length > 0) { %>
                        <% organizations.forEach(org => { %>
                        <tr>
                            <td>
                                <i class="bi bi-building-fill text-primary me-2"></i>
                                <strong><%= org.name %></strong>
                            </td>
                            <td><%= org.domain || 'N/A' %></td>
                            <td><%= org.userCount || 0 %></td>
                            <td>
                                <% if (org.enabled) { %>
                                <span class="badge badge-status bg-success">
                                    <i class="bi bi-check-circle"></i> Active
                                </span>
                                <% } else { %>
                                <span class="badge badge-status bg-danger">
                                    <i class="bi bi-x-circle"></i> Suspended
                                </span>
                                <% } %>
                            </td>
                            <td>
                                <small><%= new Date(org.createdAt).toLocaleDateString() %></small>
                            </td>
                            <td class="table-actions">
                                <div class="btn-group" role="group" aria-label="Organization actions">
                                    <a href="/admin/organizations/<%= org.id %>"
                                       class="btn btn-sm btn-outline-primary"
                                       aria-label="View organization <%= org.name %>">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-secondary"
                                            data-action="edit"
                                            data-org-id="<%= org.id %>"
                                            aria-label="Edit organization <%= org.name %>">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <% if (org.enabled) { %>
                                    <button class="btn btn-sm btn-outline-warning"
                                            data-action="suspend"
                                            data-org-id="<%= org.id %>"
                                            aria-label="Suspend organization <%= org.name %>">
                                        <i class="bi bi-pause-circle"></i>
                                    </button>
                                    <% } else { %>
                                    <button class="btn btn-sm btn-outline-success"
                                            data-action="activate"
                                            data-org-id="<%= org.id %>"
                                            aria-label="Activate organization <%= org.name %>">
                                        <i class="bi bi-play-circle"></i>
                                    </button>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No organizations found
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <% if (pagination.totalPages > 1) { %>
        <nav aria-label="Organization pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= pagination.page - 1 %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
                <% } %>

                <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= pagination.page + 1 %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

        <p class="text-center text-muted">
            Showing <%= (pagination.page - 1) * 20 + 1 %>-<%= Math.min(pagination.page * 20, pagination.total) %>
            of <%= pagination.total %> organizations
        </p>
        <% } %>
    </div>
</div>

<!-- Create Organization Modal -->
<div class="modal fade" id="createOrgModal" tabindex="-1" aria-labelledby="createOrgModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createOrgModalLabel">
                    <i class="bi bi-building text-primary me-2"></i>
                    Create New Organization
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createOrgForm" method="POST" action="/api/organizations">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="orgName" class="form-label">Organization Name</label>
                        <input type="text" class="form-control" id="orgName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="orgDomain" class="form-label">Domain</label>
                        <input type="text" class="form-control" id="orgDomain" name="domain"
                               placeholder="example.com">
                        <small class="form-text text-muted">Optional: Organization email domain</small>
                    </div>
                    <div class="mb-3">
                        <label for="orgDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="orgDescription" name="description" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Organization</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% locals.scripts = `
<script>
    // Organization search
    document.getElementById('orgSearch').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');

        rows.forEach(row => {
            const name = row.cells[0]?.textContent.toLowerCase() || '';
            const domain = row.cells[1]?.textContent.toLowerCase() || '';

            if (name.includes(searchTerm) || domain.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // Status filter
    document.getElementById('statusFilter').addEventListener('change', function(e) {
        const status = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');

        rows.forEach(row => {
            const statusBadge = row.cells[3]?.textContent.toLowerCase() || '';

            if (!status || statusBadge.includes(status)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // Organization actions
    document.querySelectorAll('[data-action]').forEach(btn => {
        btn.addEventListener('click', async function() {
            const action = this.dataset.action;
            const orgId = this.dataset.orgId;

            if (confirm(\`Are you sure you want to \${action} this organization?\`)) {
                try {
                    const response = await fetch(\`/api/organizations/\${orgId}/\${action}\`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });

                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Action failed. Please try again.');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('An error occurred. Please try again.');
                }
            }
        });
    });
</script>
`; %>
