<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <%= error || 'An Error Occurred' %>
                    </h4>
                </div>
                <div class="card-body">
                    <% if (locals.message) { %>
                    <p class="lead"><%= message %></p>
                    <% } else { %>
                    <p class="lead">We apologize for the inconvenience. Please try again later or contact support if the problem persists.</p>
                    <% } %>

                    <hr>

                    <div class="d-flex gap-2">
                        <a href="/admin" class="btn btn-primary">
                            <i class="bi bi-house"></i> Return to Dashboard
                        </a>
                        <button onclick="window.history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </button>
                    </div>

                    <% if (process.env.NODE_ENV === 'development' && locals.stack) { %>
                    <hr>
                    <details class="mt-3">
                        <summary class="text-muted">Error Details (Development Only)</summary>
                        <pre class="bg-light p-3 mt-2"><%= stack %></pre>
                    </details>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
