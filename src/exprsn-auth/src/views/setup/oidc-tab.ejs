<!-- OpenID Connect Tab -->
<div class="tab-pane fade" id="oidc" role="tabpanel">
  <div class="form-section">
    <h3><i class="bi bi-shield-lock"></i> OpenID Connect Configuration</h3>
    <p class="text-muted">Configure your OpenID Connect provider settings</p>

    <div class="alert alert-info">
      <strong><i class="bi bi-info-circle"></i> OIDC Discovery</strong><br>
      Your OIDC configuration is available at: <code><%= oidcIssuer %>/.well-known/openid-configuration</code>
    </div>

    <div class="row g-3">
      <div class="col-12">
        <label class="form-label"><strong>Issuer URL</strong></label>
        <div class="input-group">
          <input type="text" class="form-control" value="<%= oidcIssuer %>" readonly>
          <button class="btn btn-outline-secondary" onclick="copyToClipboard('<%= oidcIssuer %>', this)">
            <i class="bi bi-clipboard"></i> Copy
          </button>
        </div>
      </div>

      <div class="col-12">
        <label class="form-label"><strong>Authorization Endpoint</strong></label>
        <div class="input-group">
          <input type="text" class="form-control" value="<%= oidcIssuer %>/api/oauth2/authorize" readonly>
          <button class="btn btn-outline-secondary" onclick="copyToClipboard('<%= oidcIssuer %>/api/oauth2/authorize', this)">
            <i class="bi bi-clipboard"></i> Copy
          </button>
        </div>
      </div>

      <div class="col-12">
        <label class="form-label"><strong>Token Endpoint</strong></label>
        <div class="input-group">
          <input type="text" class="form-control" value="<%= oidcIssuer %>/api/oauth2/token" readonly>
          <button class="btn btn-outline-secondary" onclick="copyToClipboard('<%= oidcIssuer %>/api/oauth2/token', this)">
            <i class="bi bi-clipboard"></i> Copy
          </button>
        </div>
      </div>

      <div class="col-12">
        <label class="form-label"><strong>UserInfo Endpoint</strong></label>
        <div class="input-group">
          <input type="text" class="form-control" value="<%= oidcIssuer %>/api/oauth2/userinfo" readonly>
          <button class="btn btn-outline-secondary" onclick="copyToClipboard('<%= oidcIssuer %>/api/oauth2/userinfo', this)">
            <i class="bi bi-clipboard"></i> Copy
          </button>
        </div>
      </div>

      <div class="col-12">
        <label class="form-label"><strong>JWKS URI</strong></label>
        <div class="input-group">
          <input type="text" class="form-control" value="<%= oidcIssuer %>/.well-known/jwks.json" readonly>
          <button class="btn btn-outline-secondary" onclick="copyToClipboard('<%= oidcIssuer %>/.well-known/jwks.json', this)">
            <i class="bi bi-clipboard"></i> Copy
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="form-section">
    <h3><i class="bi bi-list-check"></i> Supported Features</h3>
    <div class="row g-3">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h6 class="card-title">Response Types</h6>
            <div class="d-flex flex-wrap gap-1">
              <span class="badge bg-primary">code</span>
              <span class="badge bg-primary">token</span>
              <span class="badge bg-primary">id_token</span>
              <span class="badge bg-primary">code id_token</span>
              <span class="badge bg-primary">code token</span>
              <span class="badge bg-primary">id_token token</span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h6 class="card-title">Grant Types</h6>
            <div class="d-flex flex-wrap gap-1">
              <span class="badge bg-success">authorization_code</span>
              <span class="badge bg-success">implicit</span>
              <span class="badge bg-success">refresh_token</span>
              <span class="badge bg-success">client_credentials</span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <h6 class="card-title">Scopes</h6>
            <div class="d-flex flex-wrap gap-1">
              <span class="badge bg-info">openid</span>
              <span class="badge bg-info">profile</span>
              <span class="badge bg-info">email</span>
              <span class="badge bg-info">offline_access</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
