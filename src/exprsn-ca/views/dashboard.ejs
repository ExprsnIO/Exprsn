<!-- Welcome Section -->
<div class="alert alert-light border-0 shadow-sm mb-4">
    <div class="d-flex align-items-center">
        <div class="me-3">
            <div class="user-avatar-lg">
                <%= user.username.charAt(0).toUpperCase() %>
            </div>
        </div>
        <div>
            <h5 class="mb-1">Welcome back, <%= user.username %>!</h5>
            <p class="text-muted mb-0">Here's an overview of your certificates and tokens.</p>
        </div>
    </div>
</div>

<!-- Stats Overview -->
<div class="row g-3 mb-4">
    <div class="col-md-3 col-sm-6">
        <div class="stat-card">
            <div class="stat-icon" style="background: rgba(102, 126, 234, 0.1); color: var(--exprsn-primary);">
                <i class="bi bi-file-earmark-lock"></i>
            </div>
            <div class="stat-value"><%= certificates.length %></div>
            <div class="stat-label">Certificates</div>
            <a href="/certificates" class="stretched-link"></a>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="stat-card">
            <div class="stat-icon" style="background: rgba(16, 185, 129, 0.1); color: var(--exprsn-success);">
                <i class="bi bi-key"></i>
            </div>
            <div class="stat-value"><%= tokens.length %></div>
            <div class="stat-label">CA Tokens</div>
            <a href="/tokens" class="stretched-link"></a>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="stat-card">
            <div class="stat-icon" style="background: rgba(245, 158, 11, 0.1); color: var(--exprsn-warning);">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stat-value"><%= certificates.filter(c => c.status === 'active').length %></div>
            <div class="stat-label">Active Certs</div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="stat-card">
            <div class="stat-icon" style="background: rgba(239, 68, 68, 0.1); color: var(--exprsn-danger);">
                <i class="bi bi-clock-history"></i>
            </div>
            <div class="stat-value"><%= tokens.filter(t => t.expiryType === 'time').length %></div>
            <div class="stat-label">Expiring Tokens</div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="card mb-4">
    <div class="card-body">
        <h6 class="card-title mb-3">
            <i class="bi bi-lightning-charge text-warning me-2"></i>
            Quick Actions
        </h6>
        <div class="row g-2">
            <div class="col-md-3 col-sm-6">
                <a href="/certificates/new" class="btn btn-outline-primary w-100">
                    <i class="bi bi-file-earmark-plus me-2"></i>
                    New Certificate
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a href="/tokens/new" class="btn btn-outline-success w-100">
                    <i class="bi bi-key-fill me-2"></i>
                    New Token
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a href="/tickets" class="btn btn-outline-warning w-100">
                    <i class="bi bi-ticket-perforated me-2"></i>
                    Manage Tickets
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a href="/ca" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-gear me-2"></i>
                    CA Admin
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Certificates & Tokens -->
<div class="row g-4">
    <!-- My Certificates -->
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header bg-transparent border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="bi bi-file-earmark-lock text-primary me-2"></i>
                        My Certificates
                    </h6>
                    <span class="badge bg-primary"><%= certificates.length %></span>
                </div>
            </div>
            <div class="card-body">
                <% if (certificates.length === 0) { %>
                    <div class="text-center py-4">
                        <i class="bi bi-file-earmark-lock display-4 text-muted mb-3"></i>
                        <p class="text-muted mb-3">No certificates found.</p>
                        <a href="/certificates/new" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>
                            Generate Your First Certificate
                        </a>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Common Name</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Expires</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% certificates.slice(0, 5).forEach(cert => { %>
                                    <tr>
                                        <td>
                                            <a href="/certificates/<%= cert.id %>" class="text-decoration-none">
                                                <i class="bi bi-file-earmark-lock me-1"></i>
                                                <%= cert.commonName %>
                                            </a>
                                        </td>
                                        <td><span class="text-muted small"><%= cert.type %></span></td>
                                        <td>
                                            <span class="badge <%= cert.status === 'active' ? 'bg-success' : 'bg-danger' %>">
                                                <%= cert.status %>
                                            </span>
                                        </td>
                                        <td class="text-muted small">
                                            <%= new Date(cert.notAfter).toLocaleDateString() %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% if (certificates.length > 5) { %>
                        <div class="card-footer bg-transparent border-top-0 pt-3">
                            <a href="/certificates" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-arrow-right me-2"></i>
                                View All <%= certificates.length %> Certificates
                            </a>
                        </div>
                    <% } else { %>
                        <div class="mt-3">
                            <a href="/certificates" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-arrow-right me-2"></i>
                                Manage Certificates
                            </a>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>

    <!-- My Tokens -->
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header bg-transparent border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="bi bi-key text-success me-2"></i>
                        My Tokens
                    </h6>
                    <span class="badge bg-success"><%= tokens.length %></span>
                </div>
            </div>
            <div class="card-body">
                <% if (tokens.length === 0) { %>
                    <div class="text-center py-4">
                        <i class="bi bi-key display-4 text-muted mb-3"></i>
                        <p class="text-muted mb-3">No tokens found.</p>
                        <a href="/tokens/new" class="btn btn-success">
                            <i class="bi bi-plus-circle me-2"></i>
                            Generate Your First Token
                        </a>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Resource</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% tokens.slice(0, 5).forEach(token => { %>
                                    <tr>
                                        <td>
                                            <code class="text-muted small">
                                                <%= token.resourceValue.substring(0, 25) %>...
                                            </code>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                <%= token.expiryType %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge <%= token.status === 'active' ? 'bg-success' : 'bg-danger' %>">
                                                <%= token.status %>
                                            </span>
                                        </td>
                                        <td class="text-muted small">
                                            <%= new Date(token.createdAt).toLocaleDateString() %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% if (tokens.length > 5) { %>
                        <div class="card-footer bg-transparent border-top-0 pt-3">
                            <a href="/tokens" class="btn btn-sm btn-outline-success">
                                <i class="bi bi-arrow-right me-2"></i>
                                View All <%= tokens.length %> Tokens
                            </a>
                        </div>
                    <% } else { %>
                        <div class="mt-3">
                            <a href="/tokens" class="btn btn-sm btn-outline-success">
                                <i class="bi bi-arrow-right me-2"></i>
                                Manage Tokens
                            </a>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</div>

<style>
    .user-avatar-lg {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: linear-gradient(135deg, var(--exprsn-primary) 0%, var(--exprsn-secondary) 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        font-weight: 600;
    }

    .stat-card {
        position: relative;
    }

    .stat-card .stretched-link::after {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
        content: "";
    }
</style>
