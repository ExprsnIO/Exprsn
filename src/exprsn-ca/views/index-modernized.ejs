        vertical-align: middle;
    }

    /* Dark mode adjustments */
    [data-bs-theme="dark"] .card {
        background: var(--bs-dark);
    }

    [data-bs-theme="dark"] .hero-section {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    }
</style>
