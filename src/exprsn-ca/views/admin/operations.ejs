                                    <option value="3072">3072</option>
                                    <option value="4096">4096 (High Security)</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="certValidity">Validity Period (days)</label>
                                <input type="number" class="form-control" id="certValidity" name="validityDays" value="365" min="1">
                            </div>
                        </div>
