                            <option value="root">Root CA Certificate</option>
                            <option value="intermediate">Intermediate CA Certificate</option>
                            <option value="end-entity">End-Entity Certificate</option>
                        </select>
                    </div>

                    <div class="form-section mb-3">
                        <h6 class="mb-3">Subject Information</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label" for="certCommonName">Common Name (CN) *</label>
                                <input type="text" class="form-control" id="certCommonName" name="commonName" required
