# Application
NODE_ENV=development
PORT=3010
SERVICE_NAME=exprsn-svr

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exprsn_svr
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MAX=20
DB_POOL_MIN=5

# Redis Cache
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# CA Integration
CA_URL=http://localhost:3000
CA_VERIFY_TOKENS=true
CA_PUBLIC_KEY_PATH=./keys/ca-public.pem

# Low-Code Platform Authentication
# Set to 'true' to bypass CA token validation in development mode
# WARNING: Never set to 'true' in production!
LOW_CODE_DEV_AUTH=false

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here
ENABLE_SQL_INJECTION_DETECTION=true
ENABLE_XSS_PROTECTION=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3004

# Code Execution
CODE_EXECUTION_ENABLED=true
CODE_EXECUTION_TIMEOUT=5000
CODE_EXECUTION_MEMORY_LIMIT=128

# Socket.IO
SOCKET_IO_ENABLED=true
SOCKET_IO_PATH=/socket.io
SOCKET_IO_CORS_ORIGINS=http://localhost:3000,http://localhost:3004

# File Storage
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
STATIC_DIR=./public

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=30
