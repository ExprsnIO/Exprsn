<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Exprsn Low-Code Form Designer</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Custom Styles -->
  <link href="/css/lowcode-theme.css" rel="stylesheet">

  <style>
    /* Additional component-specific styles */
    .form-designer-container {
      height: 100vh;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .designer-toolbar {
      flex-shrink: 0;
    }

    .designer-body {
      flex: 1;
      display: flex;
      overflow: hidden;
    }

    .canvas-dropzone {
      min-height: 400px;
      padding: 20px;
    }

    .canvas-element {
      position: relative;
      margin: 8px 0;
      padding: 12px;
      border: 2px solid transparent;
      border-radius: 6px;
      transition: all var(--transition-fast);
      cursor: pointer;
    }

    .canvas-element:hover {
      border-color: var(--primary);
      background: rgba(var(--primary-rgb), 0.05);
    }

    .canvas-element.selected {
      border-color: var(--primary);
      background: rgba(var(--primary-rgb), 0.1);
      box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.1);
    }

    .element-toolbar {
      position: absolute;
      top: -32px;
      right: 0;
      display: none;
      gap: 4px;
      background: var(--primary);
      padding: 4px;
      border-radius: 6px;
      box-shadow: var(--shadow);
    }

    .canvas-element.selected .element-toolbar {
      display: flex;
    }

    .element-toolbar button {
      background: rgba(255, 255, 255, 0.9);
      border: none;
      padding: 4px 8px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 11px;
      color: var(--text-primary);
      transition: all var(--transition-fast);
    }

    .element-toolbar button:hover {
      background: #ffffff;
    }

    .empty-canvas {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 400px;
      border: 2px dashed var(--border-color);
      border-radius: 12px;
      color: var(--text-muted);
    }

    .empty-canvas i {
      font-size: 64px;
      margin-bottom: 16px;
      opacity: 0.3;
    }

    .preview-iframe {
      width: 100%;
      height: 100%;
      border: none;
      background: var(--bg-primary);
    }
  </style>
</head>
<body data-theme="light">

  <!-- Form Designer Container -->
  <div class="form-designer-container">

    <!-- Toolbar -->
    <div class="lowcode-toolbar designer-toolbar">
      <div class="toolbar-section">
        <a href="/lowcode" class="toolbar-brand">
          <i class="bi bi-lightning-charge-fill"></i>
          <span>Exprsn Low-Code</span>
        </a>
        <div class="d-flex align-items-center gap-2">
          <input type="text"
                 id="formNameInput"
                 class="lowcode-input"
                 style="width: 200px;"
                 placeholder="Form Name"
                 value="Untitled Form">
          <span class="status-badge draft" id="formStatus">Draft</span>
        </div>
      </div>

      <div class="toolbar-section">
        <!-- View Mode Toggle -->
        <div class="btn-group" role="group">
          <button type="button" class="lowcode-btn active" data-view="design">
            <i class="bi bi-palette"></i> Design
          </button>
          <button type="button" class="lowcode-btn" data-view="code">
            <i class="bi bi-code-slash"></i> Code
          </button>
          <button type="button" class="lowcode-btn" data-view="preview">
            <i class="bi bi-eye"></i> Preview
          </button>
        </div>

        <!-- Device Toggle -->
        <div class="btn-group" role="group">
          <button type="button"
                  class="lowcode-btn icon-only active"
                  data-device="desktop"
                  title="Desktop">
            <i class="bi bi-display"></i>
          </button>
          <button type="button"
                  class="lowcode-btn icon-only"
                  data-device="tablet"
                  title="Tablet">
            <i class="bi bi-tablet"></i>
          </button>
          <button type="button"
                  class="lowcode-btn icon-only"
                  data-device="mobile"
                  title="Mobile">
            <i class="bi bi-phone"></i>
          </button>
        </div>
      </div>

      <div class="toolbar-section">
        <!-- Theme Toggle -->
        <div class="theme-toggle" id="themeToggle">
          <div class="theme-toggle-thumb">
            <i class="bi bi-sun-fill"></i>
          </div>
        </div>

        <!-- Action Buttons -->
        <button type="button" class="lowcode-btn" id="saveBtn">
          <i class="bi bi-save"></i> Save
        </button>
        <button type="button" class="lowcode-btn primary" id="publishBtn">
          <i class="bi bi-rocket-takeoff"></i> Publish
        </button>
      </div>
    </div>

    <!-- Main Designer Area -->
    <div class="designer-body">

      <!-- Left Sidebar - Component Library -->
      <div class="lowcode-sidebar left">
        <ul class="lowcode-tabs">
          <li class="lowcode-tab active" data-tab="components">
            <i class="bi bi-grid-3x3-gap"></i> Components
          </li>
          <li class="lowcode-tab" data-tab="assets">
            <i class="bi bi-images"></i> Assets
          </li>
        </ul>

        <!-- Components Tab -->
        <div class="lowcode-tab-content" id="componentsTab">
          <div class="component-search">
            <input type="text"
                   class="lowcode-input"
                   id="componentSearch"
                   placeholder="Search components...">
          </div>

          <div class="component-categories">
            <!-- Input Components -->
            <div class="component-category">
              <div class="category-header"
                   data-bs-toggle="collapse"
                   data-bs-target="#inputComponents"
                   aria-expanded="true">
                <i class="bi bi-chevron-down"></i>
                <span>Input</span>
              </div>
              <div class="collapse show" id="inputComponents">
                <div class="component-item" draggable="true" data-component="textinput">
                  <i class="bi bi-input-cursor-text"></i>
                  <span>Text Input</span>
                </div>
                <div class="component-item" draggable="true" data-component="textarea">
                  <i class="bi bi-textarea"></i>
                  <span>Text Area</span>
                </div>
                <div class="component-item" draggable="true" data-component="number">
                  <i class="bi bi-123"></i>
                  <span>Number Input</span>
                </div>
                <div class="component-item" draggable="true" data-component="email">
                  <i class="bi bi-envelope"></i>
                  <span>Email Input</span>
                </div>
                <div class="component-item" draggable="true" data-component="password">
                  <i class="bi bi-key"></i>
                  <span>Password</span>
                </div>
                <div class="component-item" draggable="true" data-component="date">
                  <i class="bi bi-calendar"></i>
                  <span>Date Picker</span>
                </div>
                <div class="component-item" draggable="true" data-component="time">
                  <i class="bi bi-clock"></i>
                  <span>Time Picker</span>
                </div>
                <div class="component-item" draggable="true" data-component="checkbox">
                  <i class="bi bi-check-square"></i>
                  <span>Checkbox</span>
                </div>
                <div class="component-item" draggable="true" data-component="radio">
                  <i class="bi bi-record-circle"></i>
                  <span>Radio Group</span>
                </div>
                <div class="component-item" draggable="true" data-component="select">
                  <i class="bi bi-list"></i>
                  <span>Dropdown</span>
                </div>
                <div class="component-item" draggable="true" data-component="file">
                  <i class="bi bi-file-earmark-arrow-up"></i>
                  <span>File Upload</span>
                </div>
              </div>
            </div>

            <!-- Layout Components -->
            <div class="component-category">
              <div class="category-header"
                   data-bs-toggle="collapse"
                   data-bs-target="#layoutComponents">
                <i class="bi bi-chevron-down"></i>
                <span>Layout</span>
              </div>
              <div class="collapse" id="layoutComponents">
                <div class="component-item" draggable="true" data-component="container">
                  <i class="bi bi-box"></i>
                  <span>Container</span>
                </div>
                <div class="component-item" draggable="true" data-component="section">
                  <i class="bi bi-layout-split"></i>
                  <span>Section</span>
                </div>
                <div class="component-item" draggable="true" data-component="grid">
                  <i class="bi bi-grid"></i>
                  <span>Grid</span>
                </div>
                <div class="component-item" draggable="true" data-component="tabs">
                  <i class="bi bi-folder"></i>
                  <span>Tabs</span>
                </div>
              </div>
            </div>

            <!-- Display Components -->
            <div class="component-category">
              <div class="category-header"
                   data-bs-toggle="collapse"
                   data-bs-target="#displayComponents">
                <i class="bi bi-chevron-down"></i>
                <span>Display</span>
              </div>
              <div class="collapse" id="displayComponents">
                <div class="component-item" draggable="true" data-component="label">
                  <i class="bi bi-type"></i>
                  <span>Label</span>
                </div>
                <div class="component-item" draggable="true" data-component="heading">
                  <i class="bi bi-type-h1"></i>
                  <span>Heading</span>
                </div>
                <div class="component-item" draggable="true" data-component="text">
                  <i class="bi bi-text-paragraph"></i>
                  <span>Text</span>
                </div>
                <div class="component-item" draggable="true" data-component="image">
                  <i class="bi bi-image"></i>
                  <span>Image</span>
                </div>
              </div>
            </div>

            <!-- Action Components -->
            <div class="component-category">
              <div class="category-header"
                   data-bs-toggle="collapse"
                   data-bs-target="#actionComponents">
                <i class="bi bi-chevron-down"></i>
                <span>Action</span>
              </div>
              <div class="collapse" id="actionComponents">
                <div class="component-item" draggable="true" data-component="button">
                  <i class="bi bi-ui-radios"></i>
                  <span>Button</span>
                </div>
                <div class="component-item" draggable="true" data-component="link">
                  <i class="bi bi-link-45deg"></i>
                  <span>Link</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Assets Tab -->
        <div class="lowcode-tab-content d-none" id="assetsTab">
          <div class="p-3">
            <p class="text-muted">Asset management coming soon...</p>
          </div>
        </div>
      </div>

      <!-- Center - Canvas Area -->
      <div class="lowcode-content">
        <!-- Design View -->
        <div class="lowcode-canvas-wrapper" id="designView">
          <div class="lowcode-canvas" data-device="desktop">
            <div class="canvas-dropzone" id="canvasDropzone">
              <div class="empty-canvas">
                <i class="bi bi-inbox"></i>
                <p><strong>Drag & drop components here</strong></p>
                <p class="text-muted">Start building your form by dragging components from the left panel</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Code View -->
        <div class="lowcode-canvas-wrapper d-none" id="codeView">
          <div class="lowcode-canvas w-100">
            <textarea id="codeEditor" class="lowcode-textarea" style="height: 600px; font-family: monospace;"></textarea>
          </div>
        </div>

        <!-- Preview View -->
        <div class="lowcode-canvas-wrapper d-none" id="previewView">
          <div class="lowcode-canvas" data-device="desktop">
            <iframe id="previewIframe" class="preview-iframe"></iframe>
          </div>
        </div>
      </div>

      <!-- Right Sidebar - Properties Panel -->
      <div class="lowcode-sidebar right">
        <ul class="lowcode-tabs">
          <li class="lowcode-tab active" data-tab="properties">
            <i class="bi bi-sliders"></i> Properties
          </li>
          <li class="lowcode-tab" data-tab="events">
            <i class="bi bi-lightning"></i> Events
          </li>
          <li class="lowcode-tab" data-tab="data">
            <i class="bi bi-database"></i> Data
          </li>
        </ul>

        <!-- Properties Tab -->
        <div class="lowcode-tab-content" id="propertiesTab">
          <div class="properties-panel" id="propertiesPanel">
            <div class="text-center text-muted py-5">
              <i class="bi bi-cursor" style="font-size: 48px; opacity: 0.3;"></i>
              <p class="mt-3">Select a component to edit its properties</p>
            </div>
          </div>
        </div>

        <!-- Events Tab -->
        <div class="lowcode-tab-content d-none" id="eventsTab">
          <div class="properties-panel" id="eventsPanel">
            <div class="text-center text-muted py-5">
              <i class="bi bi-lightning" style="font-size: 48px; opacity: 0.3;"></i>
              <p class="mt-3">Select a component to configure events</p>
            </div>
          </div>
        </div>

        <!-- Data Tab -->
        <div class="lowcode-tab-content d-none" id="dataTab">
          <div class="properties-panel">
            <div class="property-group">
              <h6 class="property-group-header">Data Sources</h6>
              <button class="lowcode-btn w-100 mb-2">
                <i class="bi bi-plus-circle"></i> Add Data Source
              </button>
              <div id="dataSourcesList" class="text-muted text-center py-3">
                No data sources configured
              </div>
            </div>

            <div class="property-group">
              <h6 class="property-group-header">Variables</h6>
              <button class="lowcode-btn w-100 mb-2">
                <i class="bi bi-plus-circle"></i> Add Variable
              </button>
              <div id="variablesList" class="text-muted text-center py-3">
                No variables defined
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Toast Container -->
  <div class="toast-container" id="toastContainer"></div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Form Designer JavaScript -->
  <script src="/js/lowcode-designer.js"></script>
</body>
</html>
