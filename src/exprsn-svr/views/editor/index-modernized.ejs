<!-- Page Header Actions -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1">
            <i class="bi bi-folder me-2"></i>My Pages
        </h2>
        <p class="text-muted small mb-0">
            Create and manage your dynamic pages
        </p>
    </div>
    <div class="d-flex gap-2">
        <div class="btn-group" role="group" aria-label="View mode">
            <button type="button" class="btn btn-outline-secondary btn-sm active" id="gridViewBtn" onclick="switchView('grid')">
                <i class="bi bi-grid-3x3"></i>
            </button>
            <button type="button" class="btn btn-outline-secondary btn-sm" id="listViewBtn" onclick="switchView('list')">
                <i class="bi bi-list-ul"></i>
            </button>
        </div>
        <a href="/editor/new" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Create Page
        </a>
    </div>
</div>

<!-- Filter Tabs -->
<ul class="nav nav-tabs mb-4" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#allPages" role="tab">
            <i class="bi bi-files me-1"></i>All Pages
            <span class="badge bg-secondary ms-1"><%= pages.length %></span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#published" role="tab">
            <i class="bi bi-globe me-1"></i>Published
            <span class="badge bg-success ms-1"><%= pages.filter(p => p.status === 'published').length %></span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#drafts" role="tab">
            <i class="bi bi-file-earmark me-1"></i>Drafts
            <span class="badge bg-warning ms-1"><%= pages.filter(p => p.status === 'draft').length %></span>
        </a>
    </li>
</ul>

<!-- Empty State -->
<% if (pages.length === 0) { %>
<div class="text-center py-5">
    <div class="empty-icon mb-4">
        <i class="bi bi-file-earmark-plus"></i>
    </div>
    <h3 class="h5 mb-3">No Pages Yet</h3>
    <p class="text-muted mb-4">
        Create your first dynamic page to get started
    </p>
    <a href="/editor/new" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-circle me-2"></i>Create Your First Page
    </a>
</div>
<% } else { %>

<!-- Tab Content -->
<div class="tab-content">
    <!-- All Pages -->
    <div class="tab-pane fade show active" id="allPages" role="tabpanel">
        <div id="pagesContainer" class="row g-4">
            <% pages.forEach(page => { %>
                <%- include('_page-card', { page: page }) %>
            <% }); %>
        </div>
    </div>

    <!-- Published Pages -->
    <div class="tab-pane fade" id="published" role="tabpanel">
        <div class="row g-4">
            <% pages.filter(p => p.status === 'published').forEach(page => { %>
                <%- include('_page-card', { page: page }) %>
            <% }); %>
        </div>
    </div>

    <!-- Draft Pages -->
    <div class="tab-pane fade" id="drafts" role="tabpanel">
        <div class="row g-4">
            <% pages.filter(p => p.status === 'draft').forEach(page => { %>
                <%- include('_page-card', { page: page }) %>
            <% }); %>
        </div>
    </div>
</div>

<% } %>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                    Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this page?</p>
                <p class="text-muted small mb-0">
                    <strong id="deletePageTitle"></strong><br>
                    This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Page</button>
            </div>
        </div>
    </div>
</div>

<style>
    .empty-icon {
        font-size: 4rem;
        color: var(--bs-secondary-color);
        opacity: 0.5;
    }

    .page-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .page-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

    .page-status-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
    }

    .page-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.875rem;
        color: var(--bs-secondary-color);
    }

    .page-meta-item {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .page-actions {
        display: flex;
        gap: 0.5rem;
    }

    /* List View Styles */
    #pagesContainer.list-view {
        display: flex;
        flex-direction: column;
    }

    #pagesContainer.list-view .page-card {
        margin-bottom: 1rem;
    }

    #pagesContainer.list-view .card-body {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    #pagesContainer.list-view .page-content {
        flex: 1;
    }
</style>

<script>
    let deletePageId = null;
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

    function switchView(mode) {
        const container = document.getElementById('pagesContainer');
        const gridBtn = document.getElementById('gridViewBtn');
        const listBtn = document.getElementById('listViewBtn');

        if (mode === 'grid') {
            container.classList.remove('list-view');
            gridBtn.classList.add('active');
            listBtn.classList.remove('active');
            localStorage.setItem('pagesView', 'grid');
        } else {
            container.classList.add('list-view');
            listBtn.classList.add('active');
            gridBtn.classList.remove('active');
            localStorage.setItem('pagesView', 'list');
        }
    }

    function confirmDelete(pageId, pageTitle) {
        deletePageId = pageId;
        document.getElementById('deletePageTitle').textContent = pageTitle;
        deleteModal.show();
    }

    document.getElementById('confirmDeleteBtn').addEventListener('click', async () => {
        if (!deletePageId) return;

        try {
            const response = await fetch(`/api/pages/${deletePageId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                deleteModal.hide();
                window.location.reload();
            } else {
                const error = await response.json();
                alert('Error deleting page: ' + (error.message || 'Unknown error'));
            }
        } catch (err) {
            console.error('Delete error:', err);
            alert('Error deleting page: ' + err.message);
        }
    });

    // Load saved view preference
    document.addEventListener('DOMContentLoaded', () => {
        const savedView = localStorage.getItem('pagesView') || 'grid';
        if (savedView === 'list') {
            switchView('list');
        }
    });
</script>
