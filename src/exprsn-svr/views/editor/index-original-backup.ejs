<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Pages - Exprsn Editor</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
  <%- include('../partials/header') %>
  
  <main class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>My Pages</h1>
      <a href="/editor/new" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Create New Page
      </a>
    </div>

    <% if (pages.length === 0) { %>
      <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        You haven't created any pages yet. Click "Create New Page" to get started!
      </div>
    <% } else { %>
      <div class="row g-4">
        <% pages.forEach(page => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="card-title mb-0"><%= page.title %></h5>
                  <span class="badge bg-<%= page.status === 'published' ? 'success' : 'secondary' %>">
                    <%= page.status %>
                  </span>
                </div>
                <p class="text-muted small mb-2">
                  <i class="bi bi-link-45deg"></i> /pages/<%= page.slug %>
                </p>
                <% if (page.description) { %>
                  <p class="card-text text-muted"><%= page.description.substring(0, 100) %></p>
                <% } %>
                <div class="d-flex gap-2 mt-3">
                  <a href="/editor/edit/<%= page.id %>" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                  <a href="/pages/<%= page.slug %>" class="btn btn-sm btn-outline-secondary" target="_blank">
                    <i class="bi bi-eye"></i> View
                  </a>
                </div>
                <div class="mt-2 small text-muted">
                  <i class="bi bi-eye"></i> <%= page.views_count %> views
                  <span class="ms-2">
                    <i class="bi bi-clock"></i> v<%= page.version %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
