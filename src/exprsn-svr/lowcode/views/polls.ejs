<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Exprsn Low-Code</title>

  <!-- Bootstrap 5.3.0 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome 6.4.0 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Manager Common Styles -->
  <link rel="stylesheet" href="/css/manager-common.css">

  <style>
    /* Poll-specific colors */
    .poll-icon-single { background: linear-gradient(135deg, #28c76f 0%, #1e9f57 100%); }
    .poll-icon-multiple { background: linear-gradient(135deg, #00cfe8 0%, #00a7c2 100%); }
    .poll-icon-rating { background: linear-gradient(135deg, #ff9f43 0%, #e07c1e 100%); }
    .poll-icon-text { background: linear-gradient(135deg, #7367f0 0%, #5e52d0 100%); }
    .poll-icon-default { background: linear-gradient(135deg, #81fbb8 0%, #28c76f 100%); }

    /* Modal styles */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.5);
      z-index: 1000;
      align-items: center;
      justify-content: center;
    }

    .modal.active {
      display: flex;
    }

    .modal-content {
      background: white;
      border-radius: 12px;
      padding: 2rem;
      max-width: 800px;
      width: 90%;
      max-height: 80vh;
      overflow-y: auto;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    }

    .form-group {
      margin-bottom: 1.25rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: #212529;
      font-size: 0.9rem;
    }

    .form-group input,
    .form-group textarea,
    .form-group select {
      width: 100%;
      padding: 0.65rem 0.85rem;
      border: 1px solid #ced4da;
      border-radius: 6px;
      background: white;
      color: #212529;
      font-size: 0.9rem;
    }

    .form-group input:focus,
    .form-group textarea:focus,
    .form-group select:focus {
      outline: none;
      border-color: #0078d4;
      box-shadow: 0 0 0 0.2rem rgba(0, 120, 212, 0.1);
    }

    .form-check {
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .form-check input[type="checkbox"] {
      width: auto;
      margin: 0;
    }

    .poll-options-list {
      margin-top: 1rem;
    }

    .poll-option-item {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
    }

    .poll-option-item input {
      flex: 1;
    }

    .form-actions {
      display: flex;
      gap: 1rem;
      justify-content: flex-end;
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid #e0e0e0;
    }

    .btn-close {
      background: transparent;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #6c757d;
      padding: 0;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 4px;
    }

    .btn-close:hover {
      background: #f0f0f0;
      color: #212529;
    }

    .btn-close::before {
      content: 'Ã—';
    }

    /* Completion rate progress bar */
    .completion-rate {
      height: 4px;
      background: #e0e0e0;
      border-radius: 2px;
      overflow: hidden;
      margin-top: 0.5rem;
    }

    .completion-fill {
      height: 100%;
      background: linear-gradient(90deg, #28c76f 0%, #81fbb8 100%);
      transition: width 0.3s ease;
    }
  </style>
</head>
<body>
  <div id="pageApp">
    <!-- Header -->
    <div class="page-header">
      <div class="header-title">
        <i class="fas fa-poll"></i>
        <div>
          <h1>Polls & Surveys</h1>
          <p class="header-subtitle">Create interactive polls and surveys with real-time voting</p>
        </div>
      </div>
      <div class="header-actions">
        <button class="btn btn-light btn-sm" onclick="window.history.back()">
          <i class="fas fa-arrow-left"></i> Back to Designer
        </button>
        <button class="btn btn-info btn-sm" onclick="alert('Poll templates coming soon!')">
          <i class="fas fa-file-alt"></i> Templates
        </button>
        <button class="btn btn-primary btn-sm" onclick="showCreateModal()">
          <i class="fas fa-plus"></i> New Poll
        </button>
      </div>
    </div>

    <!-- Content -->
    <div class="page-content">
      <div class="content-wrapper">
        <!-- Filters Bar -->
        <div class="filters-bar">
          <div class="filters-row">
            <div class="filter-group">
              <label>Status</label>
              <select id="filterStatus" onchange="applyFilters()">
                <option value="all">All Status</option>
                <option value="active">Active</option>
                <option value="closed">Closed</option>
                <option value="draft">Draft</option>
              </select>
            </div>
            <div class="filter-group">
              <label>Type</label>
              <select id="filterType" onchange="applyFilters()">
                <option value="all">All Types</option>
                <option value="single">Single Choice</option>
                <option value="multiple">Multiple Choice</option>
                <option value="rating">Rating</option>
                <option value="text">Open Text</option>
              </select>
            </div>
            <div class="filter-group">
              <label>Sort By</label>
              <select id="filterSort" onchange="applyFilters()">
                <option value="recent">Recently Created</option>
                <option value="responses">Most Responses</option>
                <option value="name">Name</option>
              </select>
            </div>
            <div class="filter-group">
              <label>Search</label>
              <input type="text" id="searchInput" placeholder="Search by question..." oninput="applyFilters()">
            </div>
            <div class="items-counter">
              <span id="itemCount">0</span> polls
            </div>
          </div>
        </div>

        <!-- Items Grid -->
        <div id="pollsContainer" class="items-grid">
          <!-- Loading state -->
          <div class="loading-state" style="grid-column: 1 / -1;">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading polls...</p>
          </div>
        </div>

        <!-- Empty State (hidden by default, shown by JS) -->
        <div id="emptyState" class="empty-state d-none">
          <i class="fas fa-poll"></i>
          <h3>No Polls Found</h3>
          <p>Create your first poll to gather feedback and insights</p>
          <button class="btn btn-primary" onclick="showCreateModal()">
            <i class="fas fa-plus"></i> Create Poll
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Create Modal -->
  <div id="createModal" class="modal">
    <div class="modal-content">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>New Poll</h2>
        <button class="btn-close" onclick="closeModal()"></button>
      </div>
      <form id="createForm" onsubmit="createPoll(event)">
        <div class="form-group">
          <label>Question *</label>
          <input type="text" id="pollQuestion" required placeholder="What's your question?">
        </div>
        <div class="form-group">
          <label>Description</label>
          <textarea id="pollDescription" rows="2" placeholder="Additional context (optional)"></textarea>
        </div>
        <div class="form-group">
          <label>Poll Type</label>
          <select id="pollType" onchange="updateOptionsVisibility()">
            <option value="single">Single Choice</option>
            <option value="multiple">Multiple Choice</option>
            <option value="rating">Rating (1-5 stars)</option>
            <option value="text">Open Text</option>
          </select>
        </div>
        <div class="form-group" id="optionsGroup">
          <label>Options (max 50)</label>
          <div class="poll-options-list" id="pollOptionsList">
            <div class="poll-option-item">
              <input type="text" class="poll-option" placeholder="Option 1" required>
              <button type="button" class="btn btn-sm btn-danger" onclick="removeOption(this)">
                <i class="fas fa-times"></i>
              </button>
            </div>
            <div class="poll-option-item">
              <input type="text" class="poll-option" placeholder="Option 2" required>
              <button type="button" class="btn btn-sm btn-danger" onclick="removeOption(this)">
                <i class="fas fa-times"></i>
              </button>
            </div>
          </div>
          <button type="button" class="btn btn-sm btn-secondary mt-2" onclick="addOption()">
            <i class="fas fa-plus"></i> Add Option
          </button>
        </div>
        <div class="form-group">
          <label>Settings</label>
          <div class="form-check">
            <input type="checkbox" id="allowAnonymous" checked>
            <label for="allowAnonymous">Allow anonymous voting</label>
          </div>
          <div class="form-check">
            <input type="checkbox" id="showResults">
            <label for="showResults">Show results before voting</label>
          </div>
          <div class="form-check">
            <input type="checkbox" id="allowComments">
            <label for="allowComments">Allow comments</label>
          </div>
        </div>
        <div class="form-group">
          <label>End Date (Optional)</label>
          <input type="datetime-local" id="pollEndDate">
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
          <button type="submit" name="action" value="draft" class="btn btn-outline-primary">Save as Draft</button>
          <button type="submit" name="action" value="publish" class="btn btn-primary">Publish Now</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const APP_ID = '<%= appId || "" %>';
    let allPolls = [];
    let filteredPolls = [];

    // Load polls on page load
    async function loadPolls() {
      try {
        const url = APP_ID && APP_ID !== 'null'
          ? `/lowcode/api/polls?applicationId=${APP_ID}`
          : '/lowcode/api/polls';

        const response = await fetch(url);
        const data = await response.json();

        if (data.success) {
          allPolls = data.data || [];
          applyFilters();
        } else {
          showError('Failed to load polls');
        }
      } catch (error) {
        console.error('Failed to load polls:', error);
        showError('Failed to load polls: ' + error.message);
      }
    }

    // Apply filters
    function applyFilters() {
      const statusFilter = document.getElementById('filterStatus').value;
      const typeFilter = document.getElementById('filterType').value;
      const sortBy = document.getElementById('filterSort').value;
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();

      filteredPolls = allPolls.filter(poll => {
        const matchesStatus = statusFilter === 'all' || poll.status === statusFilter;
        const matchesType = typeFilter === 'all' || poll.type === typeFilter;
        const matchesSearch = !searchTerm ||
          poll.question.toLowerCase().includes(searchTerm) ||
          (poll.description && poll.description.toLowerCase().includes(searchTerm));

        return matchesStatus && matchesType && matchesSearch;
      });

      // Sort polls
      filteredPolls.sort((a, b) => {
        switch (sortBy) {
          case 'responses':
            return (b.responseCount || 0) - (a.responseCount || 0);
          case 'name':
            return a.question.localeCompare(b.question);
          case 'recent':
          default:
            return new Date(b.createdAt) - new Date(a.createdAt);
        }
      });

      renderPolls();
    }

    // Render polls
    function renderPolls() {
      const container = document.getElementById('pollsContainer');
      const emptyState = document.getElementById('emptyState');
      const counter = document.getElementById('itemCount');

      counter.textContent = filteredPolls.length;

      if (filteredPolls.length === 0) {
        container.classList.add('d-none');
        emptyState.classList.remove('d-none');
        return;
      }

      container.classList.remove('d-none');
      emptyState.classList.add('d-none');

      container.innerHTML = filteredPolls.map(poll => {
        const completionRate = poll.targetResponses ? Math.min(100, (poll.responseCount || 0) / poll.targetResponses * 100) : 0;

        return `
        <div class="item-card" onclick="viewResults('${poll.id}')">
          <!-- Badge -->
          <div class="card-badge badge-${poll.status === 'active' ? 'success' : poll.status === 'draft' ? 'warning' : 'secondary'}">
            ${poll.status}
          </div>

          <!-- Header -->
          <div class="card-header">
            <div class="card-icon ${getPollIconClass(poll.type)}">
              <i class="${getPollIcon(poll.type)}"></i>
            </div>
            <div class="card-info">
              <h3 class="card-title">${poll.question}</h3>
              <p class="card-description">${poll.description || 'No description provided'}</p>
              <div style="font-size: 0.75rem; color: #6c757d; margin-top: 0.5rem;">
                <strong>${getPollTypeLabel(poll.type)}</strong> &bull; ${poll.options?.length || 0} options
              </div>
              ${completionRate > 0 ? `
              <div class="completion-rate">
                <div class="completion-fill" style="width: ${completionRate}%"></div>
              </div>
              ` : ''}
            </div>
          </div>

          <!-- Metadata -->
          <div class="card-metadata">
            <div class="metadata-item">
              <i class="fas fa-users"></i>
              <span>${poll.responseCount || 0} responses</span>
            </div>
            <div class="metadata-item">
              <i class="fas fa-calendar"></i>
              <span>${formatDate(poll.createdAt)}</span>
            </div>
            ${poll.endDate ? `
            <div class="metadata-item">
              <i class="fas fa-clock"></i>
              <span>Ends ${formatDate(poll.endDate)}</span>
            </div>
            ` : ''}
          </div>

          <!-- Actions -->
          <div class="card-actions">
            <button class="btn btn-outline-primary btn-sm" onclick="event.stopPropagation(); viewResults('${poll.id}')">
              <i class="fas fa-chart-bar"></i> Results
            </button>
            <button class="btn btn-outline-success btn-sm" onclick="event.stopPropagation(); editPoll('${poll.id}')">
              <i class="fas fa-edit"></i> Edit
            </button>
            ${poll.status === 'active' ? `
              <button class="btn btn-outline-warning btn-sm" onclick="event.stopPropagation(); closePoll('${poll.id}')">
                <i class="fas fa-lock"></i> Close
              </button>
            ` : ''}
            <button class="btn btn-outline-danger btn-sm" onclick="event.stopPropagation(); deletePoll('${poll.id}')">
              <i class="fas fa-trash"></i> Delete
            </button>
          </div>
        </div>
      `;
      }).join('');
    }

    // Helper functions
    function getPollIcon(type) {
      const icons = {
        single: 'fa-check-circle',
        multiple: 'fa-check-square',
        rating: 'fa-star',
        text: 'fa-comment-alt'
      };
      return `fas ${icons[type] || 'fa-poll-h'}`;
    }

    function getPollIconClass(type) {
      return `poll-icon-${type || 'default'}`;
    }

    function getPollTypeLabel(type) {
      const labels = {
        single: 'Single Choice',
        multiple: 'Multiple Choice',
        rating: 'Rating',
        text: 'Open Text'
      };
      return labels[type] || 'Poll';
    }

    function formatDate(dateString) {
      const date = new Date(dateString);
      const now = new Date();
      const diffTime = Math.abs(now - date);
      const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

      if (diffDays === 0) return 'Today';
      if (diffDays === 1) return 'Yesterday';
      if (diffDays < 7) return `${diffDays}d ago`;
      if (diffDays < 30) return `${Math.floor(diffDays / 7)}w ago`;
      return date.toLocaleDateString();
    }

    function showError(message) {
      const container = document.getElementById('pollsContainer');
      container.innerHTML = `
        <div class="empty-state" style="grid-column: 1 / -1;">
          <i class="fas fa-exclamation-circle"></i>
          <h3>Error Loading Polls</h3>
          <p>${message}</p>
          <button class="btn btn-primary mt-3" onclick="loadPolls()">
            <i class="fas fa-sync"></i> Retry
          </button>
        </div>
      `;
    }

    // Modal functions
    function showCreateModal() {
      document.getElementById('createModal').classList.add('active');
      updateOptionsVisibility();
    }

    function closeModal() {
      document.getElementById('createModal').classList.remove('active');
      document.getElementById('createForm').reset();
      // Reset to 2 default options
      const optionsList = document.getElementById('pollOptionsList');
      optionsList.innerHTML = `
        <div class="poll-option-item">
          <input type="text" class="poll-option" placeholder="Option 1" required>
          <button type="button" class="btn btn-sm btn-danger" onclick="removeOption(this)">
            <i class="fas fa-times"></i>
          </button>
        </div>
        <div class="poll-option-item">
          <input type="text" class="poll-option" placeholder="Option 2" required>
          <button type="button" class="btn btn-sm btn-danger" onclick="removeOption(this)">
            <i class="fas fa-times"></i>
          </button>
        </div>
      `;
    }

    function addOption() {
      const optionsList = document.getElementById('pollOptionsList');
      const optionCount = optionsList.children.length;

      if (optionCount >= 50) {
        alert('Maximum 50 options allowed');
        return;
      }

      const optionItem = document.createElement('div');
      optionItem.className = 'poll-option-item';
      optionItem.innerHTML = `
        <input type="text" class="poll-option" placeholder="Option ${optionCount + 1}" required>
        <button type="button" class="btn btn-sm btn-danger" onclick="removeOption(this)">
          <i class="fas fa-times"></i>
        </button>
      `;
      optionsList.appendChild(optionItem);
    }

    function removeOption(button) {
      const optionsList = document.getElementById('pollOptionsList');
      if (optionsList.children.length <= 2) {
        alert('At least 2 options are required');
        return;
      }
      button.closest('.poll-option-item').remove();
    }

    function updateOptionsVisibility() {
      const pollType = document.getElementById('pollType').value;
      const optionsGroup = document.getElementById('optionsGroup');

      // Hide options for rating and text types
      if (pollType === 'rating' || pollType === 'text') {
        optionsGroup.style.display = 'none';
      } else {
        optionsGroup.style.display = 'block';
      }
    }

    // Poll actions
    async function createPoll(event) {
      event.preventDefault();

      const action = event.submitter.value;
      const pollType = document.getElementById('pollType').value;

      // Collect options
      let options = [];
      if (pollType !== 'rating' && pollType !== 'text') {
        options = Array.from(document.querySelectorAll('.poll-option'))
          .map(input => input.value.trim())
          .filter(val => val !== '');
      }

      const payload = {
        question: document.getElementById('pollQuestion').value,
        description: document.getElementById('pollDescription').value,
        type: pollType,
        options: options,
        settings: {
          allowAnonymous: document.getElementById('allowAnonymous').checked,
          showResults: document.getElementById('showResults').checked,
          allowComments: document.getElementById('allowComments').checked
        },
        endDate: document.getElementById('pollEndDate').value || null,
        status: action === 'publish' ? 'active' : 'draft'
      };

      if (APP_ID && APP_ID !== 'null') {
        payload.applicationId = APP_ID;
      }

      try {
        const response = await fetch('/lowcode/api/polls', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        const data = await response.json();

        if (data.success) {
          closeModal();
          loadPolls();
        } else {
          alert('Failed to create poll: ' + (data.message || 'Unknown error'));
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }

    function viewResults(id) {
      window.location.href = `/lowcode/polls/${id}/results`;
    }

    function editPoll(id) {
      window.location.href = `/lowcode/polls/${id}/edit`;
    }

    async function closePoll(id) {
      if (!confirm('Are you sure you want to close this poll? No more responses will be accepted.')) {
        return;
      }

      try {
        const response = await fetch(`/lowcode/api/polls/${id}/close`, {
          method: 'POST'
        });

        const data = await response.json();

        if (data.success) {
          loadPolls();
        } else {
          alert('Failed to close poll: ' + (data.message || 'Unknown error'));
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }

    async function deletePoll(id) {
      if (!confirm('Are you sure you want to delete this poll? All responses will be lost.')) {
        return;
      }

      try {
        const response = await fetch(`/lowcode/api/polls/${id}`, {
          method: 'DELETE'
        });

        const data = await response.json();

        if (data.success) {
          loadPolls();
        } else {
          alert('Failed to delete poll: ' + (data.message || 'Unknown error'));
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', () => {
      loadPolls();
    });
  </script>
</body>
</html>
