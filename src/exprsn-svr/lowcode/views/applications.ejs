<!-- Step 1: Basic Information -->
<div class="wizard-step-panel active" data-step-panel="1">
  <h3 class="step-panel-title">
    <i class="fas fa-info-circle"></i>
    Basic Information
  </h3>
  <p class="step-panel-desc">Set up your application's name, description, and initial configuration.</p>

  <div class="form-group">
    <label class="form-label" for="appName">Application Name *</label>
    <input
      type="text"
      class="form-input"
      id="appName"
      placeholder="my-app"
      required
      pattern="[a-zA-Z][a-zA-Z0-9_-]*"
    >
    <small style="color: var(--text-secondary); font-size: 0.75rem;">
      Must start with a letter, can contain letters, numbers, hyphens, and underscores
    </small>
  </div>

  <div class="form-group">
    <label class="form-label" for="appDisplayName">Display Name *</label>
    <input
      type="text"
      class="form-input"
      id="appDisplayName"
      placeholder="My Application"
      required
    >
  </div>

  <div class="form-group">
    <label class="form-label" for="appDescription">Description</label>
    <textarea
      class="form-textarea"
      id="appDescription"
      placeholder="Brief description of your application"
      style="min-height: 100px;"
    ></textarea>
  </div>

  <div class="form-group">
    <label class="form-label" for="appVersion">Initial Version</label>
    <input
      type="text"
      class="form-input"
