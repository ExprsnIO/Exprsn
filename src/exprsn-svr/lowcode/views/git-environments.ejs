<!-- Add Environment Modal -->
<div class="modal fade" id="addEnvironmentModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="background: var(--exprsn-bg-primary); border: 1px solid var(--exprsn-border-color); border-radius: var(--exprsn-radius-xl);">
            <div class="modal-header" style="border-bottom: 1px solid var(--exprsn-border-color);">
                <h5 class="modal-title">New Deployment Environment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Environment Name</label>
                    <input type="text" class="form-control" placeholder="Production, Staging, QA, etc.">
                </div>
                <div class="form-group">
                    <label class="form-label">URL</label>
                    <input type="url" class="form-control" placeholder="https://app.exprsn.io">
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Protection Level</label>
                            <select class="form-control form-select">
                                <option>No Protection</option>
                                <option>Review Required</option>
                                <option>Protected (Approvals Required)</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Required Approvals</label>
                            <input type="number" class="form-control" value="0" min="0" max="10">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Wait Timer (minutes)</label>
                    <input type="number" class="form-control" value="0" min="0" max="1440">
                    <small class="text-muted">Delay before deployment starts</small>
                </div>
                <div class="form-group mb-0">
                    <div class="d-flex flex-column gap-2">
                        <div>
                            <input type="checkbox" id="env-auto-deploy">
                            <label for="env-auto-deploy">Auto-deploy from branch</label>
                        </div>
                        <div>
                            <input type="checkbox" id="env-notifications">
                            <label for="env-notifications">Email notifications on deployment</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="border-top: 1px solid var(--exprsn-border-color);">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Create Environment</button>
            </div>
        </div>
    </div>
</div>

<!-- Environment Variables Modal -->
