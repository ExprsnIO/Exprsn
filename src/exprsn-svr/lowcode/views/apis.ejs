<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Exprsn Low-Code</title>

  <!-- Bootstrap 5.3.0 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome 6.4.0 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Manager Common Styles -->
  <link rel="stylesheet" href="/css/manager-common.css">

  <!-- Socket.IO Client -->
  <script src="/socket.io/socket.io.js"></script>

  <style>
    /* API-specific colors */
    .api-icon-rest { background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%); }
    .api-icon-graphql { background: linear-gradient(135deg, #E10098 0%, #C00075 100%); }
    .api-icon-soap { background: linear-gradient(135deg, #8E44AD 0%, #6C3483 100%); }
    .api-icon-webhook { background: linear-gradient(135deg, #FF6B35 0%, #E64A19 100%); }
    .api-icon-integration { background: linear-gradient(135deg, #13547a 0%, #80d0c7 100%); }
    .api-icon-endpoint { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }

    /* HTTP Method badges */
    .method-badge {
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.7rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-right: 0.5rem;
    }

    .method-get { background: #28c76f; color: white; }
    .method-post { background: #00cfe8; color: white; }
    .method-put { background: #ff9f43; color: white; }
    .method-patch { background: #7367f0; color: white; }
    .method-delete { background: #ea5455; color: white; }

    /* Endpoint display */
    .api-endpoint {
      font-family: 'Courier New', monospace;
      background: #f8f9fa;
      padding: 0.4rem 0.6rem;
      border-radius: 4px;
      font-size: 0.8rem;
      margin-top: 0.5rem;
      color: #495057;
      border: 1px solid #e0e0e0;
    }

    /* Modal styles */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.5);
      z-index: 1000;
      align-items: center;
      justify-content: center;
    }

    .modal.active {
      display: flex;
    }

    .modal-content {
      background: white;
      border-radius: 12px;
      padding: 2rem;
      max-width: 900px;
      width: 90%;
      max-height: 80vh;
      overflow-y: auto;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    }

    .form-group {
      margin-bottom: 1.25rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: #212529;
      font-size: 0.9rem;
    }

    .form-group input,
    .form-group textarea,
    .form-group select {
      width: 100%;
      padding: 0.65rem 0.85rem;
      border: 1px solid #ced4da;
      border-radius: 6px;
      background: white;
      color: #212529;
      font-size: 0.9rem;
    }

    .form-group input:focus,
    .form-group textarea:focus,
    .form-group select:focus {
      outline: none;
      border-color: #0078d4;
      box-shadow: 0 0 0 0.2rem rgba(0, 120, 212, 0.1);
    }

    .form-group small {
      display: block;
      margin-top: 0.25rem;
      color: #6c757d;
      font-size: 0.8rem;
    }

    .form-actions {
      display: flex;
      gap: 1rem;
      justify-content: flex-end;
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid #e0e0e0;
    }

    .code-editor {
      font-family: 'Courier New', monospace;
      font-size: 0.85rem;
      background: #f8f9fa;
    }

    .btn-close {
      background: transparent;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #6c757d;
      padding: 0;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 4px;
    }

    .btn-close:hover {
      background: #f0f0f0;
      color: #212529;
    }

    .btn-close::before {
      content: 'Ã—';
    }

    .form-check {
      margin-bottom: 0.75rem;
    }

    .form-check input {
      width: auto;
      margin-right: 0.5rem;
    }
  </style>
</head>
<body>
  <div id="pageApp">
    <!-- Header -->
    <div class="page-header">
      <div class="header-title">
        <i class="fas fa-plug"></i>
        <div>
          <h1>API Integrations</h1>
          <p class="header-subtitle">Build RESTful APIs, webhooks, and integrate with external services</p>
        </div>
      </div>
      <div class="header-actions">
        <button class="btn btn-light btn-sm" onclick="window.history.back()">
          <i class="fas fa-arrow-left"></i> Back to Designer
        </button>
        <% if (appId) { %>
        <button class="btn btn-info btn-sm" onclick="viewAllDocs()">
          <i class="fas fa-book"></i> View Docs
        </button>
        <% } %>
        <button class="btn btn-primary btn-sm" onclick="createNewAPI()">
          <i class="fas fa-plus"></i> New API Endpoint
        </button>
      </div>
    </div>

    <!-- Content -->
    <div class="page-content">
      <div class="content-wrapper">
        <!-- Filters Bar -->
        <div class="filters-bar">
          <div class="filters-row">
            <div class="filter-group">
              <label>Type</label>
              <select id="filterType" onchange="applyFilters()">
                <option value="all">All Types</option>
                <option value="endpoint">REST Endpoints</option>
                <option value="webhook">Webhooks</option>
                <option value="integration">Integrations</option>
              </select>
            </div>
            <div class="filter-group">
              <label>Method</label>
              <select id="filterMethod" onchange="applyFilters()">
                <option value="all">All Methods</option>
                <option value="GET">GET</option>
                <option value="POST">POST</option>
                <option value="PUT">PUT</option>
                <option value="PATCH">PATCH</option>
                <option value="DELETE">DELETE</option>
              </select>
            </div>
            <div class="filter-group">
              <label>Status</label>
              <select id="filterStatus" onchange="applyFilters()">
                <option value="all">All Status</option>
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
              </select>
            </div>
            <div class="filter-group">
              <label>Search</label>
              <input type="text" id="searchInput" placeholder="Search by name or path..." oninput="applyFilters()">
            </div>
            <div class="items-counter">
              <span id="itemCount">0</span> endpoints
            </div>
          </div>
        </div>

        <!-- Items Grid -->
        <div id="apisContainer" class="items-grid">
          <!-- Loading state -->
          <div class="loading-state" style="grid-column: 1 / -1;">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading API endpoints...</p>
          </div>
        </div>

        <!-- Empty State (hidden by default, shown by JS) -->
        <div id="emptyState" class="empty-state d-none">
          <i class="fas fa-plug"></i>
          <h3>No API Endpoints Found</h3>
          <p>Create your first API endpoint to expose data and functionality</p>
          <button class="btn btn-primary" onclick="createNewAPI()">
            <i class="fas fa-plus"></i> Create API Endpoint
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Create/Edit Modal -->
  <div id="createModal" class="modal">
    <div class="modal-content">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>New API Endpoint</h2>
        <button class="btn-close" onclick="closeModal()"></button>
      </div>
      <form id="createForm" onsubmit="createAPI(event)">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>Name *</label>
              <input type="text" id="apiName" required placeholder="My API Endpoint">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Type *</label>
              <select id="apiType" required>
                <option value="endpoint">REST API Endpoint</option>
                <option value="webhook">Webhook Receiver</option>
                <option value="integration">External Integration</option>
              </select>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>HTTP Method *</label>
              <select id="apiMethod" required>
                <option value="GET">GET</option>
                <option value="POST">POST</option>
                <option value="PUT">PUT</option>
                <option value="PATCH">PATCH</option>
                <option value="DELETE">DELETE</option>
              </select>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Path *</label>
              <input type="text" id="apiPath" placeholder="/api/my-endpoint" required>
              <small>Will be accessible at: /lowcode/custom{path}</small>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label>Description</label>
          <textarea id="apiDescription" rows="2" placeholder="Describe what this API does..."></textarea>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>Authentication</label>
              <select id="apiAuth">
                <option value="required">Required (CA Token)</option>
                <option value="optional">Optional</option>
                <option value="none">None (Public)</option>
                <option value="apikey">API Key</option>
              </select>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Rate Limit (requests/min)</label>
              <input type="number" id="apiRateLimit" value="60" min="1">
            </div>
          </div>
        </div>

        <div class="form-group">
          <label>Request Schema (JSON Schema)</label>
          <textarea id="apiRequestSchema" class="code-editor" rows="5" placeholder='{
  "type": "object",
  "properties": {
    "name": { "type": "string" }
  },
  "required": ["name"]
}'></textarea>
          <small>Optional validation schema for request body</small>
        </div>

        <div class="form-group">
          <label>Response Type</label>
          <select id="apiResponseType">
            <option value="entity">Return Entity Data</option>
            <option value="custom">Custom Response</option>
            <option value="proxy">Proxy to Data Source</option>
            <option value="workflow">Trigger Workflow</option>
          </select>
        </div>

        <div class="form-group">
          <label>Custom Response (JSONLex)</label>
          <textarea id="apiResponse" class="code-editor" rows="4" placeholder='{
  "success": true,
  "data": "$.result",
  "timestamp": "$.now()"
}'></textarea>
        </div>

        <div class="form-group">
          <label>CORS Settings</label>
          <div class="form-check">
            <input type="checkbox" id="apiCorsEnabled" checked>
            <label for="apiCorsEnabled">Enable CORS</label>
          </div>
          <input type="text" id="apiCorsOrigins" placeholder="https://example.com, * for all">
          <small>Allowed origins (comma-separated)</small>
        </div>

        <div class="form-actions">
          <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
          <button type="submit" class="btn btn-primary">Create API Endpoint</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const APP_ID = '<%= appId || "" %>';
    let allAPIs = [];
    let filteredAPIs = [];

    // Load APIs on page load
    async function loadAPIs() {
      try {
        const url = APP_ID && APP_ID !== 'null'
          ? `/lowcode/api/apis?applicationId=${APP_ID}`
          : '/lowcode/api/apis';

        const response = await fetch(url);
        const data = await response.json();

        if (data.success) {
          allAPIs = data.data || [];
          applyFilters();
        } else {
          showError('Failed to load API endpoints');
        }
      } catch (error) {
        console.error('Failed to load APIs:', error);
        showError('Failed to load API endpoints: ' + error.message);
      }
    }

    // Apply filters
    function applyFilters() {
      const typeFilter = document.getElementById('filterType').value;
      const methodFilter = document.getElementById('filterMethod').value;
      const statusFilter = document.getElementById('filterStatus').value;
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();

      filteredAPIs = allAPIs.filter(api => {
        const matchesType = typeFilter === 'all' || api.type === typeFilter;
        const matchesMethod = methodFilter === 'all' || api.method === methodFilter;
        const matchesStatus = statusFilter === 'all' || api.status === statusFilter;
        const matchesSearch = !searchTerm ||
          api.name.toLowerCase().includes(searchTerm) ||
          api.path.toLowerCase().includes(searchTerm) ||
          (api.description && api.description.toLowerCase().includes(searchTerm));

        return matchesType && matchesMethod && matchesStatus && matchesSearch;
      });

      renderAPIs();
    }

    // Render APIs
    function renderAPIs() {
      const container = document.getElementById('apisContainer');
      const emptyState = document.getElementById('emptyState');
      const counter = document.getElementById('itemCount');

      counter.textContent = filteredAPIs.length;

      if (filteredAPIs.length === 0) {
        container.classList.add('d-none');
        emptyState.classList.remove('d-none');
        return;
      }

      container.classList.remove('d-none');
      emptyState.classList.add('d-none');

      container.innerHTML = filteredAPIs.map(api => `
        <div class="item-card" onclick="editAPI('${api.id}')">
          <!-- Badge -->
          <div class="card-badge badge-${api.status === 'active' ? 'success' : 'secondary'}">
            ${api.status}
          </div>

          <!-- Header -->
          <div class="card-header">
            <div class="card-icon ${getAPIIconClass(api.type)}">
              <i class="${getAPIIcon(api.type)}"></i>
            </div>
            <div class="card-info">
              <h3 class="card-title">
                <span class="method-badge method-${api.method.toLowerCase()}">${api.method}</span>
                ${api.name}
              </h3>
              <p class="card-description">${api.description || 'No description provided'}</p>
              <div class="api-endpoint">${api.path}</div>
            </div>
          </div>

          <!-- Metadata -->
          <div class="card-metadata">
            <div class="metadata-item">
              <i class="fas fa-exchange-alt"></i>
              <span>${api.requestCount || 0} requests</span>
            </div>
            <div class="metadata-item">
              <i class="fas fa-tachometer-alt"></i>
              <span>${api.rateLimit || 60}/min</span>
            </div>
            <div class="metadata-item">
              <i class="fas fa-shield-alt"></i>
              <span>${formatAuth(api.auth)}</span>
            </div>
            ${api.cacheTtl > 0 ? `
            <div class="metadata-item">
              <i class="fas fa-database"></i>
              <span>${api.cacheTtl}s cache</span>
            </div>
            ` : ''}
          </div>

          <!-- Actions -->
          <div class="card-actions">
            <button class="btn btn-outline-success btn-sm" onclick="event.stopPropagation(); testAPI('${api.id}')">
              <i class="fas fa-play"></i> Test
            </button>
            <button class="btn btn-outline-primary btn-sm" onclick="event.stopPropagation(); editAPI('${api.id}')">
              <i class="fas fa-edit"></i> Edit
            </button>
            <button class="btn btn-outline-info btn-sm" onclick="event.stopPropagation(); viewDocs('${api.id}')">
              <i class="fas fa-book"></i> Docs
            </button>
            <button class="btn btn-outline-danger btn-sm" onclick="event.stopPropagation(); deleteAPI('${api.id}')">
              <i class="fas fa-trash"></i> Delete
            </button>
          </div>
        </div>
      `).join('');
    }

    // Helper functions
    function getAPIIcon(type) {
      const icons = {
        endpoint: 'fa-plug',
        webhook: 'fa-webhook',
        integration: 'fa-link'
      };
      return `fas ${icons[type] || 'fa-code'}`;
    }

    function getAPIIconClass(type) {
      return `api-icon-${type || 'endpoint'}`;
    }

    function formatAuth(auth) {
      const authLabels = {
        required: 'CA Token',
        optional: 'Optional',
        none: 'Public',
        apikey: 'API Key'
      };
      return authLabels[auth] || 'Unknown';
    }

    function showError(message) {
      const container = document.getElementById('apisContainer');
      container.innerHTML = `
        <div class="empty-state" style="grid-column: 1 / -1;">
          <i class="fas fa-exclamation-circle"></i>
          <h3>Error Loading APIs</h3>
          <p>${message}</p>
          <button class="btn btn-primary mt-3" onclick="loadAPIs()">
            <i class="fas fa-sync"></i> Retry
          </button>
        </div>
      `;
    }

    // Modal functions
    function showCreateModal() {
      document.getElementById('createModal').classList.add('active');
    }

    function closeModal() {
      document.getElementById('createModal').classList.remove('active');
      document.getElementById('createForm').reset();
    }

    // API Actions
    function createNewAPI() {
      const appIdParam = APP_ID && APP_ID !== 'null' ? `?appId=${APP_ID}` : '';
      window.location.href = `/lowcode/apis/new${appIdParam}`;
    }

    function viewAllDocs() {
      if (APP_ID && APP_ID !== 'null') {
        window.open(`/lowcode/api/apis/docs/swagger?applicationId=${APP_ID}`, '_blank');
      } else {
        alert('Application ID required for documentation');
      }
    }

    async function createAPI(event) {
      event.preventDefault();

      const payload = {
        name: document.getElementById('apiName').value,
        type: document.getElementById('apiType').value,
        method: document.getElementById('apiMethod').value,
        path: document.getElementById('apiPath').value,
        description: document.getElementById('apiDescription').value,
        auth: document.getElementById('apiAuth').value,
        rateLimit: parseInt(document.getElementById('apiRateLimit').value),
        requestSchema: document.getElementById('apiRequestSchema').value,
        responseType: document.getElementById('apiResponseType').value,
        response: document.getElementById('apiResponse').value,
        cors: {
          enabled: document.getElementById('apiCorsEnabled').checked,
          origins: document.getElementById('apiCorsOrigins').value
        },
        status: 'active'
      };

      if (APP_ID && APP_ID !== 'null') {
        payload.applicationId = APP_ID;
      }

      try {
        const response = await fetch('/lowcode/api/apis', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        const data = await response.json();

        if (data.success) {
          closeModal();
          loadAPIs();
        } else {
          alert('Failed to create API: ' + (data.message || 'Unknown error'));
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }

    function testAPI(id) {
      window.location.href = `/lowcode/apis/${id}/designer#test`;
    }

    function editAPI(id) {
      window.location.href = `/lowcode/apis/${id}/designer`;
    }

    function viewDocs(id) {
      if (APP_ID && APP_ID !== 'null') {
        window.open(`/lowcode/api/apis/docs/swagger?applicationId=${APP_ID}`, '_blank');
      } else {
        alert('Application ID required for documentation');
      }
    }

    async function deleteAPI(id) {
      if (!confirm('Are you sure you want to delete this API endpoint?')) {
        return;
      }

      try {
        const response = await fetch(`/lowcode/api/apis/${id}`, {
          method: 'DELETE'
        });

        const data = await response.json();

        if (data.success) {
          loadAPIs();
        } else {
          alert('Failed to delete API: ' + (data.message || 'Unknown error'));
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }

    // Socket.IO Real-time Updates
    let socket;

    function initSocket() {
      socket = io();

      socket.on('api:created', () => loadAPIs());
      socket.on('api:updated', () => loadAPIs());
      socket.on('api:deleted', () => loadAPIs());

      socket.on('api:called', (data) => {
        const api = allAPIs.find(a => a.id === data.apiId);
        if (api) {
          api.requestCount = (api.requestCount || 0) + 1;
          applyFilters();
        }
      });

      socket.on('connect', () => console.log('Socket.IO connected'));
      socket.on('disconnect', () => console.log('Socket.IO disconnected'));
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', () => {
      loadAPIs();
      initSocket();
    });
  </script>
</body>
</html>
