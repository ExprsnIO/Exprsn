<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Exprsn Low-Code Platform</title>

  <!-- Bootstrap 5.3.2 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Font Awesome 6.4.0 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Exprsn Dashboard Styles (Shared) -->
  <link rel="stylesheet" href="/shared/css/exprsn-dashboard.css">

  <!-- Socket.IO Client -->
  <script src="/socket.io/socket.io.js"></script>

  <style>
    /* Plugin-specific enhancements */
    .plugin-marketplace-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 1.5rem;
      margin-top: 1.5rem;
    }

    .plugin-card {
      background: var(--exprsn-surface-raised);
      border: 1px solid var(--exprsn-border-color);
      border-radius: var(--exprsn-radius-lg);
      padding: 1.5rem;
      transition: var(--exprsn-transition-base);
      position: relative;
      overflow: hidden;
    }

    .plugin-card:hover {
      border-color: var(--exprsn-primary);
      box-shadow: var(--exprsn-shadow-lg);
      transform: translateY(-2px);
    }

    .plugin-card-header {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .plugin-icon {
      width: 56px;
      height: 56px;
      border-radius: var(--exprsn-radius-lg);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      color: white;
      flex-shrink: 0;
    }

    .plugin-icon-api { background: var(--exprsn-gradient-cool); }
    .plugin-icon-form { background: var(--exprsn-gradient-primary); }
    .plugin-icon-grid { background: var(--exprsn-gradient-warm); }
    .plugin-icon-dashboard { background: var(--exprsn-gradient-success); }
    .plugin-icon-workflow { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .plugin-icon-data { background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%); }
    .plugin-icon-integration { background: linear-gradient(135deg, #13547a 0%, #80d0c7 100%); }
    .plugin-icon-authentication { background: linear-gradient(135deg, #F7971E 0%, #FFD200 100%); }
    .plugin-icon-analytics { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); }

    .plugin-info {
      flex: 1;
    }

    .plugin-title {
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--exprsn-text-primary);
      margin: 0 0 0.25rem 0;
    }

    .plugin-version {
      display: inline-flex;
      align-items: center;
      padding: 0.125rem 0.5rem;
      font-size: 0.75rem;
      font-weight: 600;
      font-family: var(--exprsn-font-family-mono);
      background: var(--exprsn-bg-tertiary);
      color: var(--exprsn-text-secondary);
      border-radius: var(--exprsn-radius-sm);
      margin-left: 0.5rem;
    }

    .plugin-description {
      font-size: 0.875rem;
      color: var(--exprsn-text-secondary);
      line-height: 1.5;
      margin: 0.75rem 0;
    }

    .plugin-metadata {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      margin: 1rem 0;
      padding: 0.75rem 0;
      border-top: 1px solid var(--exprsn-border-color);
      border-bottom: 1px solid var(--exprsn-border-color);
    }

    .plugin-metadata-item {
      display: flex;
      align-items: center;
      gap: 0.375rem;
      font-size: 0.8125rem;
      color: var(--exprsn-text-muted);
    }

    .plugin-metadata-item i {
      font-size: 0.875rem;
      color: var(--exprsn-text-secondary);
    }

    .plugin-price {
      display: flex;
      align-items: baseline;
      gap: 0.25rem;
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--exprsn-primary);
      margin: 1rem 0;
    }

    .plugin-price-currency {
      font-size: 1rem;
    }

    .plugin-price-period {
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--exprsn-text-muted);
    }

    .plugin-price.free {
      color: var(--exprsn-success);
    }

    .plugin-actions {
      display: flex;
      gap: 0.5rem;
      margin-top: 1rem;
    }

    .plugin-badge {
      position: absolute;
      top: 1rem;
      right: 1rem;
      padding: 0.375rem 0.75rem;
      font-size: 0.6875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border-radius: var(--exprsn-radius-full);
    }

    .plugin-badge.installed {
      background: var(--exprsn-success-bg);
      color: var(--exprsn-success);
    }

    .plugin-badge.enabled {
      background: var(--exprsn-info-bg);
      color: var(--exprsn-info);
    }

    .plugin-badge.official {
      background: var(--exprsn-primary-glow);
      color: var(--exprsn-primary);
    }

    .plugin-badge.premium {
      background: linear-gradient(135deg, #f97316 0%, #ec4899 100%);
      color: white;
    }

    /* Marketplace Tabs */
    .marketplace-tabs {
      display: flex;
      gap: 0.5rem;
      border-bottom: 2px solid var(--exprsn-border-color);
      margin-bottom: 1.5rem;
    }

    .marketplace-tab {
      padding: 0.75rem 1.5rem;
      font-size: 0.9375rem;
      font-weight: 500;
      color: var(--exprsn-text-secondary);
      background: transparent;
      border: none;
      border-bottom: 2px solid transparent;
      cursor: pointer;
      transition: var(--exprsn-transition-base);
      margin-bottom: -2px;
    }

    .marketplace-tab:hover {
      color: var(--exprsn-text-primary);
      background: var(--exprsn-bg-secondary);
    }

    .marketplace-tab.active {
      color: var(--exprsn-primary);
      border-bottom-color: var(--exprsn-primary);
    }

    .marketplace-tab i {
      margin-right: 0.5rem;
    }

    /* Stats Overview */
    .stats-overview {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .stat-card {
      background: var(--exprsn-surface-raised);
      border: 1px solid var(--exprsn-border-color);
      border-radius: var(--exprsn-radius-lg);
      padding: 1.25rem;
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: var(--exprsn-text-primary);
      margin: 0;
    }

    .stat-label {
      font-size: 0.875rem;
      color: var(--exprsn-text-muted);
      margin-top: 0.25rem;
    }

    .stat-icon {
      width: 40px;
      height: 40px;
      border-radius: var(--exprsn-radius-lg);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
    }

    /* Loading State */
    .plugin-skeleton {
      background: linear-gradient(90deg, var(--exprsn-bg-secondary) 25%, var(--exprsn-bg-tertiary) 50%, var(--exprsn-bg-secondary) 75%);
      background-size: 200% 100%;
      animation: skeleton-loading 1.5s infinite;
      border-radius: var(--exprsn-radius-sm);
    }

    @keyframes skeleton-loading {
      0% { background-position: 200% 0; }
      100% { background-position: -200% 0; }
    }
  </style>
</head>
<body>
  <div class="main-content" style="margin-left: 0; margin-top: 0;">
    <!-- Page Header -->
    <div class="page-header">
      <div>
        <h1 class="page-title">
          <i class="bi bi-puzzle"></i> Plugins & Extensions
        </h1>
        <p class="page-subtitle">Extend your platform with powerful plugins and integrations</p>
      </div>
      <div class="page-actions">
        <button class="btn btn-outline-secondary" onclick="window.history.back()">
          <i class="bi bi-arrow-left"></i> Back
        </button>
        <button class="btn btn-primary" onclick="showUploadModal()">
          <i class="bi bi-upload"></i> Upload Plugin
        </button>
        <button class="btn btn-success" onclick="window.location.href='/lowcode/plugin-creator'">
          <i class="bi bi-plus-circle"></i> Create Plugin
        </button>
      </div>
    </div>

    <!-- Stats Overview -->
    <div class="stats-overview" id="statsOverview" style="display: none;">
      <div class="stat-card">
        <div class="stat-icon" style="background: var(--exprsn-gradient-primary); color: white;">
          <i class="bi bi-puzzle"></i>
        </div>
        <h3 class="stat-value" id="statTotalPlugins">0</h3>
        <p class="stat-label">Total Plugins</p>
      </div>
      <div class="stat-card">
        <div class="stat-icon" style="background: var(--exprsn-gradient-success); color: white;">
          <i class="bi bi-check-circle"></i>
        </div>
        <h3 class="stat-value" id="statInstalledPlugins">0</h3>
        <p class="stat-label">Installed</p>
      </div>
      <div class="stat-card">
        <div class="stat-icon" style="background: var(--exprsn-gradient-cool); color: white;">
          <i class="bi bi-power"></i>
        </div>
        <h3 class="stat-value" id="statEnabledPlugins">0</h3>
        <p class="stat-label">Enabled</p>
      </div>
      <div class="stat-card">
        <div class="stat-icon" style="background: var(--exprsn-gradient-warm); color: white;">
          <i class="bi bi-arrow-up-circle"></i>
        </div>
        <h3 class="stat-value" id="statUpdatesAvailable">0</h3>
        <p class="stat-label">Updates Available</p>
      </div>
    </div>

    <!-- Marketplace Tabs -->
    <div class="marketplace-tabs">
      <button class="marketplace-tab active" data-tab="installed" onclick="switchTab('installed')">
        <i class="bi bi-box"></i> Installed
      </button>
      <button class="marketplace-tab" data-tab="marketplace" onclick="switchTab('marketplace')">
        <i class="bi bi-shop"></i> Marketplace
      </button>
      <button class="marketplace-tab" data-tab="my-plugins" onclick="switchTab('my-plugins')">
        <i class="bi bi-code-square"></i> My Plugins
      </button>
      <button class="marketplace-tab" data-tab="updates" onclick="switchTab('updates')">
        <i class="bi bi-arrow-repeat"></i> Updates
      </button>
    </div>

    <!-- Filters Bar -->
    <div class="card" style="margin-bottom: 1.5rem;">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-3">
            <label class="form-label">Category</label>
            <select id="filterCategory" class="form-select" onchange="applyFilters()">
              <option value="all">All Categories</option>
              <option value="api">API & Integration</option>
              <option value="form">Form Components</option>
              <option value="grid">Grid & Data</option>
              <option value="dashboard">Dashboard & Analytics</option>
              <option value="workflow">Workflow</option>
              <option value="authentication">Authentication</option>
              <option value="data">Data Management</option>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">Status</label>
            <select id="filterStatus" class="form-select" onchange="applyFilters()">
              <option value="all">All Status</option>
              <option value="enabled">Enabled</option>
              <option value="disabled">Disabled</option>
              <option value="installed">Installed</option>
              <option value="not-installed">Not Installed</option>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">Type</label>
            <select id="filterType" class="form-select" onchange="applyFilters()">
              <option value="all">All Types</option>
              <option value="official">Official</option>
              <option value="community">Community</option>
              <option value="premium">Premium</option>
              <option value="free">Free</option>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">Search</label>
            <input type="text" id="searchInput" class="form-control" placeholder="Search plugins..." oninput="applyFilters()">
          </div>
        </div>
      </div>
    </div>

    <!-- Tab Content -->
    <div id="tabContent">
      <!-- Plugins Grid -->
      <div id="pluginsGrid" class="plugin-marketplace-grid">
        <!-- Loading state -->
        <div class="col-12 text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-3 text-muted">Loading plugins...</p>
        </div>
      </div>

      <!-- Empty State -->
      <div id="emptyState" class="text-center py-5" style="display: none;">
        <i class="bi bi-inbox" style="font-size: 4rem; color: var(--exprsn-text-muted);"></i>
        <h3 class="mt-3">No Plugins Found</h3>
        <p class="text-muted">Try adjusting your filters or browse the marketplace</p>
        <button class="btn btn-primary mt-3" onclick="switchTab('marketplace')">
          <i class="bi bi-shop"></i> Browse Marketplace
        </button>
      </div>
    </div>
  </div>

  <!-- Upload Plugin Modal -->
  <div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Upload Plugin</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="uploadForm">
            <div class="mb-3">
              <label class="form-label">Plugin Package (.zip)</label>
              <input type="file" class="form-control" id="pluginFile" accept=".zip" required>
            </div>
            <div class="alert alert-info">
              <i class="bi bi-info-circle"></i>
              Upload a packaged plugin (.zip file) containing package.json and plugin files.
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" onclick="uploadPlugin()">
            <i class="bi bi-upload"></i> Upload
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Plugin Details Modal -->
  <div class="modal fade" id="pluginDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="detailsModalTitle">Plugin Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" id="detailsModalBody">
          <!-- Populated by JavaScript -->
        </div>
        <div class="modal-footer" id="detailsModalFooter">
          <!-- Populated by JavaScript -->
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap & Dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Global State
    let socket = null;
    let currentTab = 'installed';
    let allPlugins = [];
    let marketplacePlugins = [];
    let filteredPlugins = [];

    // Initialize Socket.IO
    function initSocket() {
      socket = io({
        path: '/socket.io',
        transports: ['websocket', 'polling']
      });

      socket.on('connect', () => {
        console.log('Socket.IO connected');
      });

      socket.on('plugin:generated', (data) => {
        console.log('Plugin generated:', data);
        showNotification('Plugin generated successfully!', 'success');
        loadInstalledPlugins();
      });

      socket.on('plugin:installed', (data) => {
        console.log('Plugin installed:', data);
        showNotification('Plugin installed successfully!', 'success');
        loadInstalledPlugins();
      });

      socket.on('plugin:deleted', (data) => {
        console.log('Plugin deleted:', data);
        showNotification('Plugin deleted successfully!', 'info');
        loadInstalledPlugins();
      });

      socket.on('plugin:enabled', (data) => {
        console.log('Plugin enabled:', data);
        showNotification('Plugin enabled successfully!', 'success');
        loadInstalledPlugins();
      });

      socket.on('plugin:disabled', (data) => {
        console.log('Plugin disabled:', data);
        showNotification('Plugin disabled!', 'info');
        loadInstalledPlugins();
      });

      socket.on('disconnect', () => {
        console.log('Socket.IO disconnected');
      });

      socket.on('error', (error) => {
        console.error('Socket.IO error:', error);
      });
    }

    // Load Installed Plugins
    async function loadInstalledPlugins() {
      try {
        const response = await fetch('/lowcode/api/plugins');
        const data = await response.json();

        if (data.success) {
          allPlugins = data.data.plugins || [];
          updateStats();
          applyFilters();
        } else {
          showError('Failed to load plugins: ' + (data.message || 'Unknown error'));
        }
      } catch (error) {
        console.error('Failed to load plugins:', error);
        showError('Failed to load plugins: ' + error.message);
      }
    }

    // Load Marketplace Plugins
    async function loadMarketplacePlugins() {
      try {
        const response = await fetch('/lowcode/api/plugins/marketplace');
        const data = await response.json();

        if (data.success) {
          marketplacePlugins = data.data || [];
          applyFilters();
        } else {
          // Use mock data if API not implemented yet
          marketplacePlugins = getMockMarketplacePlugins();
          applyFilters();
        }
      } catch (error) {
        console.error('Failed to load marketplace:', error);
        // Use mock data
        marketplacePlugins = getMockMarketplacePlugins();
        applyFilters();
      }
    }

    // Mock Marketplace Data
    function getMockMarketplacePlugins() {
      return [
        {
          id: 'stripe-payments',
          name: 'stripe-payments',
