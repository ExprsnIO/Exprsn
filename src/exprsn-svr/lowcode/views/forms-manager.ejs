<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Forms Manager - Exprsn Low-Code</title>

  <!-- Exprsn Theme -->
  <link rel="stylesheet" href="/css/exprsn-theme.css">
  <link rel="stylesheet" href="/css/lowcode-theme.css">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: var(--bg-primary);
      color: var(--text-primary);
      height: 100vh;
      overflow: hidden;
      display: flex;
      flex-direction: column;
    }

    /* Header */
    .manager-header {
      background: var(--bg-secondary);
      border-bottom: 1px solid var(--border-color);
      padding: 0.5rem 1.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-shrink: 0;
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .back-btn {
      background: transparent;
      border: 1px solid var(--border-color);
      color: var(--text-primary);
      padding: 0.5rem 1rem;
      border-radius: 6px;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      transition: all 0.2s;
    }

    .back-btn:hover {
      background: var(--bg-hover);
      border-color: var(--primary-color);
      color: var(--primary-color);
    }

    .manager-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-primary);
    }

    .header-actions {
      display: flex;
      gap: 0.75rem;
    }

    /* Main Container */
    .manager-container {
      flex: 1;
      display: grid;
      grid-template-columns: 280px 1fr;
      gap: 0;
      overflow: hidden;
    }

    /* Left Sidebar - Navigator */
    .forms-navigator {
      border-right: 1px solid var(--border-color);
      background: var(--bg-secondary);
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .navigator-header {
      padding: 0.75rem 1rem;
      border-bottom: 1px solid var(--border-color);
      background: var(--bg-primary);
    }

    .search-box {
      width: 100%;
      padding: 0.5rem 0.75rem 0.5rem 2.25rem;
      border: 1px solid var(--border-color);
      border-radius: 6px;
      background: var(--bg-secondary);
      color: var(--text-primary);
      font-size: 0.875rem;
      position: relative;
    }

    .search-wrapper {
      position: relative;
    }

    .search-wrapper i {
      position: absolute;
      left: 0.75rem;
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-secondary);
      font-size: 0.875rem;
    }

    .search-box:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px rgba(0, 120, 212, 0.1);
    }

    .forms-tree {
      flex: 1;
      overflow-y: auto;
      padding: 0.5rem;
    }

    .tree-folder {
      margin-bottom: 0.25rem;
    }

    .folder-header {
      display: flex;
      align-items: center;
      padding: 0.5rem 0.75rem;
      cursor: pointer;
      border-radius: 6px;
      transition: all 0.2s;
      user-select: none;
    }

    .folder-header:hover {
      background: var(--bg-hover);
    }

    .folder-header.active {
      background: rgba(0, 120, 212, 0.1);
      color: var(--primary-color);
    }

    .folder-toggle {
      margin-right: 0.5rem;
      font-size: 0.75rem;
      transition: transform 0.2s;
    }

    .folder-toggle.expanded {
      transform: rotate(90deg);
    }

    .folder-icon {
      margin-right: 0.5rem;
      color: var(--text-secondary);
    }

    .folder-name {
      flex: 1;
      font-size: 0.875rem;
      font-weight: 500;
    }

    .folder-count {
      font-size: 0.75rem;
      color: var(--text-secondary);
      background: var(--bg-primary);
      padding: 0.125rem 0.5rem;
      border-radius: 12px;
    }

    .folder-children {
      padding-left: 1.5rem;
      display: none;
    }

    .folder-children.expanded {
      display: block;
    }

    .form-item {
      display: flex;
      align-items: center;
      padding: 0.5rem 0.75rem;
      cursor: pointer;
      border-radius: 6px;
      transition: all 0.2s;
      margin-bottom: 0.125rem;
    }

    .form-item:hover {
      background: var(--bg-hover);
    }

    .form-item.selected {
      background: rgba(0, 120, 212, 0.1);
      color: var(--primary-color);
    }

    .form-item i {
      margin-right: 0.5rem;
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .form-item.selected i {
      color: var(--primary-color);
    }

    .form-item-name {
      flex: 1;
      font-size: 0.875rem;
    }

    .navigator-footer {
      border-top: 1px solid var(--border-color);
      padding: 0.75rem;
      display: flex;
      gap: 0.5rem;
      background: var(--bg-primary);
    }

    .nav-footer-btn {
      flex: 1;
      padding: 0.5rem;
      border: 1px solid var(--border-color);
      background: var(--bg-secondary);
      color: var(--text-primary);
      border-radius: 6px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.375rem;
      font-size: 0.75rem;
      font-weight: 500;
      transition: all 0.2s;
    }

    .nav-footer-btn:hover {
      background: var(--bg-hover);
      border-color: var(--primary-color);
      color: var(--primary-color);
    }

    .nav-footer-btn i {
      font-size: 0.875rem;
    }

    /* Main Content Area */
    .forms-content {
      background: var(--bg-primary);
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .content-toolbar {
      padding: 1rem 1.5rem;
      border-bottom: 1px solid var(--border-color);
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: var(--bg-secondary);
    }

    .toolbar-left {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .view-toggle {
      display: flex;
      gap: 0.25rem;
      background: var(--bg-primary);
      border-radius: 6px;
      padding: 0.25rem;
    }

    .view-btn {
      padding: 0.5rem 0.75rem;
      border: none;
      background: transparent;
      color: var(--text-secondary);
      cursor: pointer;
      border-radius: 4px;
      transition: all 0.2s;
    }

    .view-btn.active {
      background: var(--primary-color);
      color: white;
    }

    .view-btn:hover:not(.active) {
      background: var(--bg-hover);
    }

    .sort-dropdown {
      padding: 0.5rem 0.75rem;
      border: 1px solid var(--border-color);
      border-radius: 6px;
      background: var(--bg-primary);
      color: var(--text-primary);
      font-size: 0.875rem;
      cursor: pointer;
    }

    .forms-grid {
      flex: 1;
      overflow-y: auto;
      padding: 1.5rem;
    }

    .grid-view {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .list-view {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .form-card {
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 8px;
      padding: 1.5rem;
      cursor: pointer;
      transition: all 0.2s;
      position: relative;
    }

    .form-card:hover {
      border-color: var(--primary-color);
      box-shadow: 0 4px 12px rgba(0, 120, 212, 0.1);
      transform: translateY(-2px);
    }

    .form-card-header {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      margin-bottom: 0.75rem;
    }

    .form-card-icon {
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, rgba(0, 120, 212, 0.1) 0%, rgba(0, 120, 212, 0.05) 100%);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--primary-color);
      font-size: 1.5rem;
    }

    .form-card-actions {
      display: flex;
      gap: 0.5rem;
      opacity: 0;
      transition: opacity 0.2s;
    }

    .form-card:hover .form-card-actions {
      opacity: 1;
    }

    .card-action-btn {
      width: 32px;
      height: 32px;
      border: 1px solid var(--border-color);
      background: var(--bg-primary);
      color: var(--text-secondary);
      border-radius: 6px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
    }

    .card-action-btn:hover {
      border-color: var(--primary-color);
      color: var(--primary-color);
      background: rgba(0, 120, 212, 0.05);
    }

    .form-card-title {
      font-size: 1rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .form-card-description {
      font-size: 0.875rem;
      color: var(--text-secondary);
      line-height: 1.5;
      margin-bottom: 1rem;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .form-card-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 0.75rem;
      border-top: 1px solid var(--border-color);
      font-size: 0.75rem;
      color: var(--text-secondary);
    }

    .form-card-status {
      display: flex;
      align-items: center;
      gap: 0.375rem;
    }

    .status-badge {
      padding: 0.25rem 0.5rem;
      border-radius: 12px;
      font-weight: 500;
    }

    .status-badge.draft {
      background: rgba(255, 193, 7, 0.1);
      color: #f59e0b;
    }

    .status-badge.published {
      background: rgba(16, 185, 129, 0.1);
      color: #10b981;
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
    }

    .empty-state-icon {
      font-size: 4rem;
      color: var(--text-secondary);
      opacity: 0.3;
      margin-bottom: 1rem;
    }

    .empty-state-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .empty-state-description {
      font-size: 0.875rem;
      color: var(--text-secondary);
      margin-bottom: 1.5rem;
    }

    /* Buttons */
    .btn {
      padding: 0.625rem 1.25rem;
      border-radius: 6px;
      border: none;
      cursor: pointer;
      font-size: 0.875rem;
      font-weight: 500;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.2s;
    }

    .btn-primary {
      background: var(--primary-color);
      color: white;
    }

    .btn-primary:hover {
      background: var(--primary-hover);
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(0, 120, 212, 0.3);
    }

    .btn-secondary {
      background: transparent;
      color: var(--text-primary);
      border: 1px solid var(--border-color);
    }

    .btn-secondary:hover {
      background: var(--bg-hover);
      border-color: var(--primary-color);
      color: var(--primary-color);
    }
  </style>
</head>
<body>
  <!-- Header -->
  <div class="manager-header">
    <div class="header-left">
      <button class="back-btn" onclick="goBack()">
        <i class="fas fa-arrow-left"></i>
        Back to Designer
      </button>
      <h1 class="manager-title">Forms Manager</h1>
    </div>
    <div class="header-actions">
      <button class="btn btn-secondary" onclick="createFolder()">
        <i class="fas fa-folder-plus"></i>
        New Folder
      </button>
      <button class="btn btn-primary" onclick="createNewForm()">
        <i class="fas fa-plus"></i>
        New Form
      </button>
    </div>
  </div>

  <!-- Main Container -->
  <div class="manager-container">
    <!-- Left Sidebar - Navigator -->
    <div class="forms-navigator">
      <div class="navigator-header">
        <div class="search-wrapper">
          <i class="fas fa-search"></i>
          <input type="text" id="searchInput" class="search-box" placeholder="Search forms..." oninput="filterForms()">
        </div>
      </div>

      <div class="forms-tree" id="formsTree">
        <!-- Populated dynamically -->
      </div>

      <div class="navigator-footer">
        <button class="nav-footer-btn" onclick="createNewForm()" title="Add Form">
          <i class="fas fa-plus"></i>
        </button>
        <button class="nav-footer-btn" onclick="deleteSelected()" title="Delete">
          <i class="fas fa-trash"></i>
        </button>
        <button class="nav-footer-btn" onclick="refreshForms()" title="Refresh">
          <i class="fas fa-sync-alt"></i>
        </button>
      </div>
    </div>

    <!-- Main Content Area -->
    <div class="forms-content">
      <div class="content-toolbar">
        <div class="toolbar-left">
          <div class="view-toggle">
            <button class="view-btn active" data-view="grid" onclick="switchView('grid')">
              <i class="fas fa-th"></i>
            </button>
            <button class="view-btn" data-view="list" onclick="switchView('list')">
              <i class="fas fa-list"></i>
            </button>
          </div>

          <select class="sort-dropdown" onchange="sortForms(this.value)">
            <option value="name">Sort by Name</option>
            <option value="modified">Sort by Modified</option>
            <option value="created">Sort by Created</option>
            <option value="status">Sort by Status</option>
          </select>
        </div>

        <div class="toolbar-right">
          <span id="formsCount" style="font-size: 0.875rem; color: var(--text-secondary);">0 forms</span>
        </div>
      </div>

      <div class="forms-grid grid-view" id="formsContainer">
        <!-- Forms populated dynamically -->
      </div>
    </div>
  </div>

  <script>
    const appId = '<%= appId %>';
    let forms = [];
    let folders = [];
    let selectedFormId = null;
    let selectedFolderId = null;
    let currentView = 'grid';

    // Load forms and folders on page load
    document.addEventListener('DOMContentLoaded', () => {
      loadForms();
      loadFolders();
    });

    async function loadForms() {
      try {
        const response = await fetch(`/lowcode/api/forms?applicationId=${appId}`);
        const result = await response.json();

        if (result.success) {
          forms = result.data || [];
          renderFormsTree();
          renderFormsGrid();
          updateFormsCount();
        }
      } catch (error) {
        console.error('Failed to load forms:', error);
      }
    }

    async function loadFolders() {
      try {
        // TODO: Implement folder API endpoint
        folders = [
          { id: 'root', name: 'All Forms', parentId: null, count: 0 },
          { id: 'customer', name: 'Customer Forms', parentId: 'root', count: 0 },
          { id: 'employee', name: 'Employee Forms', parentId: 'root', count: 0 },
          { id: 'reports', name: 'Reports', parentId: 'root', count: 0 }
        ];
        renderFormsTree();
      } catch (error) {
        console.error('Failed to load folders:', error);
      }
    }

    function renderFormsTree() {
      const treeContainer = document.getElementById('formsTree');
      treeContainer.innerHTML = '';

      // Build folder tree
      const rootFolders = folders.filter(f => f.parentId === null || f.parentId === 'root');

      rootFolders.forEach(folder => {
        const folderForms = forms.filter(f => f.folderId === folder.id || (!f.folderId && folder.id === 'root'));
        folder.count = folderForms.length;

        const folderEl = createFolderElement(folder, folderForms);
        treeContainer.appendChild(folderEl);
      });
    }

    function createFolderElement(folder, folderForms) {
      const div = document.createElement('div');
      div.className = 'tree-folder';
      div.dataset.folderId = folder.id;

      const header = document.createElement('div');
      header.className = 'folder-header';
      if (selectedFolderId === folder.id) header.classList.add('active');

      header.innerHTML = `
        <i class="fas fa-chevron-right folder-toggle ${folder.id === 'root' ? 'expanded' : ''}"></i>
        <i class="fas fa-folder folder-icon"></i>
        <span class="folder-name">${folder.name}</span>
        <span class="folder-count">${folder.count}</span>
      `;

      header.onclick = (e) => {
        e.stopPropagation();
        toggleFolder(folder.id);
        selectFolder(folder.id);
      };

      const children = document.createElement('div');
      children.className = `folder-children ${folder.id === 'root' ? 'expanded' : ''}`;

      // Add forms in this folder
      folderForms.forEach(form => {
        const formItem = document.createElement('div');
        formItem.className = 'form-item';
        if (selectedFormId === form.id) formItem.classList.add('selected');
        formItem.innerHTML = `
          <i class="fas fa-file-alt"></i>
          <span class="form-item-name">${form.displayName || form.name}</span>
        `;
        formItem.onclick = () => selectForm(form.id);
        formItem.ondblclick = () => openFormDesigner(form.id);
        children.appendChild(formItem);
      });

      div.appendChild(header);
      div.appendChild(children);

      return div;
    }

    function toggleFolder(folderId) {
      const folder = document.querySelector(`[data-folder-id="${folderId}"]`);
      const toggle = folder.querySelector('.folder-toggle');
      const children = folder.querySelector('.folder-children');

      toggle.classList.toggle('expanded');
      children.classList.toggle('expanded');
    }

    function selectFolder(folderId) {
      selectedFolderId = folderId;
      document.querySelectorAll('.folder-header').forEach(h => h.classList.remove('active'));
      const folder = document.querySelector(`[data-folder-id="${folderId}"] .folder-header`);
      if (folder) folder.classList.add('active');
    }

    function selectForm(formId) {
      selectedFormId = formId;
      document.querySelectorAll('.form-item').forEach(item => item.classList.remove('selected'));
      document.querySelectorAll('.form-card').forEach(card => card.classList.remove('selected'));

      const treeItem = Array.from(document.querySelectorAll('.form-item')).find(el =>
        el.querySelector('.form-item-name').textContent.includes(forms.find(f => f.id === formId)?.displayName)
      );
      if (treeItem) treeItem.classList.add('selected');
    }

    function renderFormsGrid() {
      const container = document.getElementById('formsContainer');
      container.className = `forms-grid ${currentView}-view`;

      if (forms.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <div class="empty-state-icon">
              <i class="fas fa-file-alt"></i>
            </div>
            <h2 class="empty-state-title">No forms yet</h2>
            <p class="empty-state-description">Get started by creating your first form</p>
            <button class="btn btn-primary" onclick="createNewForm()">
              <i class="fas fa-plus"></i>
              Create Form
            </button>
          </div>
        `;
        return;
      }

      container.innerHTML = forms.map(form => `
        <div class="form-card" onclick="selectForm('${form.id}')" ondblclick="openFormDesigner('${form.id}')">
          <div class="form-card-header">
            <div class="form-card-icon">
              <i class="fas fa-wpforms"></i>
            </div>
            <div class="form-card-actions">
              <button class="card-action-btn" onclick="event.stopPropagation(); openFormDesigner('${form.id}')" title="Open Designer">
                <i class="fas fa-pencil"></i>
              </button>
              <button class="card-action-btn" onclick="event.stopPropagation(); duplicateForm('${form.id}')" title="Duplicate">
                <i class="fas fa-copy"></i>
              </button>
              <button class="card-action-btn" onclick="event.stopPropagation(); deleteForm('${form.id}')" title="Delete">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </div>
          <h3 class="form-card-title">${form.displayName || form.name}</h3>
          <p class="form-card-description">${form.description || 'No description'}</p>
          <div class="form-card-footer">
            <div class="form-card-status">
              <span class="status-badge ${form.status || 'draft'}">${form.status || 'Draft'}</span>
            </div>
            <span>${new Date(form.updatedAt).toLocaleDateString()}</span>
          </div>
        </div>
      `).join('');
    }

    function updateFormsCount() {
      document.getElementById('formsCount').textContent = `${forms.length} form${forms.length !== 1 ? 's' : ''}`;
    }

    function switchView(view) {
      currentView = view;
      document.querySelectorAll('.view-btn').forEach(btn => {
        btn.classList.toggle('active', btn.dataset.view === view);
      });
      renderFormsGrid();
    }

    function sortForms(criteria) {
      forms.sort((a, b) => {
        switch(criteria) {
          case 'name':
            return (a.displayName || a.name).localeCompare(b.displayName || b.name);
          case 'modified':
            return new Date(b.updatedAt) - new Date(a.updatedAt);
          case 'created':
            return new Date(b.createdAt) - new Date(a.createdAt);
          case 'status':
            return (a.status || 'draft').localeCompare(b.status || 'draft');
          default:
            return 0;
        }
      });
      renderFormsGrid();
      renderFormsTree();
    }

    function filterForms() {
      const query = document.getElementById('searchInput').value.toLowerCase();
      const filtered = forms.filter(form =>
        (form.displayName || form.name).toLowerCase().includes(query) ||
        (form.description || '').toLowerCase().includes(query)
      );

      // Temporarily replace forms array for rendering
      const originalForms = forms;
      forms = filtered;
      renderFormsGrid();
      renderFormsTree();
      forms = originalForms;
    }

    function createNewForm() {
      window.location.href = `/lowcode/forms/new?appId=${appId}`;
    }

    function openFormDesigner(formId) {
      window.location.href = `/lowcode/forms/${formId}/designer`;
    }

    async function deleteForm(formId) {
      if (!confirm('Are you sure you want to delete this form?')) return;

      try {
        const response = await fetch(`/lowcode/api/forms/${formId}`, {
          method: 'DELETE'
        });
        const result = await response.json();

        if (result.success) {
          await loadForms();
        } else {
          alert('Failed to delete form: ' + result.error);
        }
      } catch (error) {
        console.error('Error deleting form:', error);
        alert('Failed to delete form');
      }
    }

    async function duplicateForm(formId) {
      try {
        const response = await fetch(`/lowcode/api/forms/${formId}/duplicate`, {
          method: 'POST'
        });
        const result = await response.json();

        if (result.success) {
          await loadForms();
        } else {
          alert('Failed to duplicate form: ' + result.error);
        }
      } catch (error) {
        console.error('Error duplicating form:', error);
        alert('Failed to duplicate form');
      }
    }

    function deleteSelected() {
      if (!selectedFormId) {
        alert('Please select a form to delete');
        return;
      }
      deleteForm(selectedFormId);
    }

    function refreshForms() {
      loadForms();
      loadFolders();
    }

    function createFolder() {
      const name = prompt('Enter folder name:');
      if (!name) return;

      // TODO: Implement folder creation API
      folders.push({
        id: 'folder-' + Date.now(),
        name: name,
        parentId: selectedFolderId || 'root',
        count: 0
      });
      renderFormsTree();
    }

    function goBack() {
      window.location.href = `/lowcode/designer?appId=${appId}`;
    }
  </script>
