# Service Configuration
NODE_ENV=development
PORT=3018
SERVICE_NAME=exprsn-payments

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exprsn_payments
DB_USER=postgres
DB_PASSWORD=your_password
DB_LOGGING=false

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CA Integration
CA_URL=http://localhost:3000
CA_PUBLIC_KEY_PATH=../exprsn-ca/certificates/ca-cert.pem

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_webhook_id

# Authorize.Net Configuration
AUTHNET_API_LOGIN_ID=your_api_login_id
AUTHNET_TRANSACTION_KEY=your_transaction_key
AUTHNET_ENVIRONMENT=sandbox
AUTHNET_WEBHOOK_SIGNATURE_KEY=your_signature_key

# Queue Configuration
PAYMENT_QUEUE_CONCURRENCY=5
WEBHOOK_QUEUE_CONCURRENCY=10

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
WEBHOOK_SIGNATURE_TOLERANCE=300

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=logs/payments.log
