# Exprsn Live - Environment Configuration

# =============================================================================
# Server Configuration
# =============================================================================

# Node environment (development, staging, production)
NODE_ENV=development

# Server port and host
LIVE_SERVICE_PORT=3009
LIVE_SERVICE_HOST=0.0.0.0

# Log level (error, warn, info, debug)
LOG_LEVEL=info
LOG_DIR=./logs

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exprsn_live
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database connection pool
DB_POOL_MAX=10
DB_POOL_MIN=2

# =============================================================================
# Redis Configuration
# =============================================================================

# Enable Redis for caching and pub/sub
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Certificate Authority Configuration
# =============================================================================

# CA service URL for token validation
CA_BASE_URL=http://localhost:3000

# Service token for CA authentication
SERVICE_TOKEN=your_service_token_here

# =============================================================================
# Encryption Configuration
# =============================================================================

# Encryption key for securing OAuth tokens and stream keys (REQUIRED in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# =============================================================================
# Streaming Provider Configuration
# =============================================================================

# Streaming provider (cloudflare, srs, custom)
STREAMING_PROVIDER=cloudflare

# Cloudflare Stream credentials
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# =============================================================================
# Platform Integrations
# =============================================================================

# YouTube Live API Configuration
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:3009/api/platforms/youtube/callback

# Twitch API Configuration
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_REDIRECT_URI=http://localhost:3009/api/platforms/twitch/callback

# Facebook Live API Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:3009/api/platforms/facebook/callback

# SRS (Simple Realtime Server) Configuration
SRS_API_URL=http://localhost:1985
SRS_RTMP_PORT=1935
SRS_HTTP_PORT=8080
SRS_HTTPS_PORT=8443
SRS_PUBLIC_HOST=localhost
SRS_SSL_ENABLED=false
SRS_API_SECRET=your_srs_api_secret

# =============================================================================
# FFmpeg Configuration
# =============================================================================

# Enable FFmpeg for video processing
FFMPEG_ENABLED=true

# Auto-install FFmpeg if not found (experimental)
FFMPEG_AUTO_INSTALL=false

# Path to FFmpeg binary (leave empty for auto-detect)
FFMPEG_BINARY_PATH=

# =============================================================================
# Service Integration
# =============================================================================

# Spark messaging service
SPARK_BASE_URL=http://localhost:3002

# Timeline service
TIMELINE_BASE_URL=http://localhost:3004

# Moderator service (for AI content moderation)
MODERATOR_BASE_URL=http://localhost:3006

# FileVault service (for video/file storage)
FILEVAULT_BASE_URL=http://localhost:3007

# =============================================================================
# Production Configuration
# =============================================================================

# In production:
# - Set NODE_ENV=production
# - Configure proper database credentials
# - Set up Redis for caching
# - Configure streaming platform credentials
# - Set appropriate log level
# - Configure SERVICE_TOKEN for CA auth
# - Enable SSL for SRS if using
# - Set up proper OAuth redirect URIs for platforms
