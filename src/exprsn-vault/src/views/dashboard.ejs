<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Exprsn Vault - Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/vault-dashboard.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <i class="bi bi-shield-lock-fill"></i> Exprsn Vault
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="#overview">Overview</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#secrets">Secrets</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#keys">Keys</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#leases">Leases</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#audit">Audit</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid mt-4">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2">
        <div class="list-group">
          <a href="#overview" class="list-group-item list-group-item-action active" data-section="overview">
            <i class="bi bi-speedometer2"></i> Overview
          </a>
          <a href="#secrets" class="list-group-item list-group-item-action" data-section="secrets">
            <i class="bi bi-key-fill"></i> Secrets
          </a>
          <a href="#keys" class="list-group-item list-group-item-action" data-section="keys">
            <i class="bi bi-file-lock2-fill"></i> Encryption Keys
          </a>
          <a href="#leases" class="list-group-item list-group-item-action" data-section="leases">
            <i class="bi bi-clock-history"></i> Dynamic Secrets
          </a>
          <a href="#audit" class="list-group-item list-group-item-action" data-section="audit">
            <i class="bi bi-journal-text"></i> Audit Logs
          </a>
        </div>
      </div>

      <!-- Main Content -->
      <div class="col-md-10">
        <!-- Overview Section -->
        <div id="overview-section" class="content-section">
          <h2><i class="bi bi-speedometer2"></i> Vault Overview</h2>
          <div class="row mt-4">
            <div class="col-md-3">
              <div class="card text-white bg-primary">
                <div class="card-body">
                  <h5 class="card-title"><i class="bi bi-key-fill"></i> Secrets</h5>
                  <h2 id="stats-secrets">-</h2>
                  <p class="card-text">Total active secrets</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card text-white bg-success">
                <div class="card-body">
                  <h5 class="card-title"><i class="bi bi-file-lock2-fill"></i> Keys</h5>
                  <h2 id="stats-keys">-</h2>
                  <p class="card-text">Encryption keys</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card text-white bg-warning">
                <div class="card-body">
                  <h5 class="card-title"><i class="bi bi-clock-history"></i> Leases</h5>
                  <h2 id="stats-leases">-</h2>
                  <p class="card-text">Active leases</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card text-white bg-info">
                <div class="card-body">
                  <h5 class="card-title"><i class="bi bi-journal-text"></i> Audit</h5>
                  <h2 id="stats-audit">-</h2>
                  <p class="card-text">Audit entries (24h)</p>
                </div>
              </div>
            </div>
          </div>

          <div class="row mt-4">
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  <h5><i class="bi bi-activity"></i> Recent Activity</h5>
                </div>
                <div class="card-body">
                  <div id="recent-activity" class="activity-list">
                    <p class="text-muted">Loading...</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  <h5><i class="bi bi-bar-chart-fill"></i> Activity Statistics</h5>
                </div>
                <div class="card-body">
                  <div id="activity-stats">
                    <p class="text-muted">Loading...</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Secrets Section -->
        <div id="secrets-section" class="content-section" style="display:none;">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-key-fill"></i> Secrets Management</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createSecretModal">
              <i class="bi bi-plus-circle"></i> Create Secret
            </button>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="mb-3">
                <input type="text" id="secrets-search" class="form-control" placeholder="Search secrets by path...">
              </div>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Path</th>
                      <th>Key</th>
                      <th>Version</th>
                      <th>Status</th>
                      <th>Created</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody id="secrets-table">
                    <tr>
                      <td colspan="6" class="text-center text-muted">Loading...</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- Keys Section -->
        <div id="keys-section" class="content-section" style="display:none;">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-file-lock2-fill"></i> Encryption Keys</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createKeyModal">
              <i class="bi bi-plus-circle"></i> Generate Key
            </button>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Algorithm</th>
                      <th>Purpose</th>
                      <th>Version</th>
                      <th>Status</th>
                      <th>Created</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody id="keys-table">
                    <tr>
                      <td colspan="7" class="text-center text-muted">Loading...</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- Leases Section -->
        <div id="leases-section" class="content-section" style="display:none;">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-clock-history"></i> Dynamic Secrets & Leases</h2>
            <div class="btn-group">
              <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#generateDatabaseModal">
                <i class="bi bi-database"></i> Database Credentials
              </button>
              <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#generateApiKeyModal">
                <i class="bi bi-key"></i> API Key
              </button>
            </div>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Lease ID</th>
                      <th>Type</th>
                      <th>Path</th>
                      <th>TTL</th>
                      <th>Expires</th>
                      <th>Renew Count</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody id="leases-table">
                    <tr>
                      <td colspan="8" class="text-center text-muted">Loading...</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- Audit Section -->
        <div id="audit-section" class="content-section" style="display:none;">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-journal-text"></i> Audit Logs</h2>
            <button class="btn btn-success" id="export-audit-btn">
              <i class="bi bi-download"></i> Export CSV
            </button>
          </div>

          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <select id="audit-action" class="form-select">
                    <option value="">All Actions</option>
                    <option value="create">Create</option>
                    <option value="read">Read</option>
                    <option value="update">Update</option>
                    <option value="delete">Delete</option>
                    <option value="rotate">Rotate</option>
                  </select>
                </div>
                <div class="col-md-3">
                  <select id="audit-resource-type" class="form-select">
                    <option value="">All Resources</option>
                    <option value="secret">Secret</option>
                    <option value="key">Key</option>
                    <option value="lease">Lease</option>
                  </select>
                </div>
                <div class="col-md-3">
                  <select id="audit-success" class="form-select">
                    <option value="">All</option>
                    <option value="true">Success</option>
                    <option value="false">Failures</option>
                  </select>
                </div>
                <div class="col-md-3">
                  <button class="btn btn-primary w-100" id="audit-filter-btn">
                    <i class="bi bi-filter"></i> Apply Filters
                  </button>
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Timestamp</th>
                      <th>Action</th>
                      <th>Resource</th>
                      <th>Actor</th>
                      <th>Status</th>
                      <th>Duration</th>
                    </tr>
                  </thead>
                  <tbody id="audit-table">
                    <tr>
                      <td colspan="6" class="text-center text-muted">Loading...</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modals -->
  <%- include('modals') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/vault-dashboard.js"></script>
</body>
</html>
