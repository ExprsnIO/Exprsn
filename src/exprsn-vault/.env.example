# Exprsn Vault - Environment Configuration

# =============================================================================
# Server Configuration
# =============================================================================

# Node environment (development, staging, production)
NODE_ENV=development

# Server port
VAULT_PORT=3013

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exprsn_vault
DB_USER=postgres
DB_PASSWORD=your_password_here

# =============================================================================
# Encryption Configuration
# =============================================================================

# Master encryption key (CRITICAL: Generate a strong 32-byte key for production)
# Use: openssl rand -hex 32
VAULT_MASTER_KEY=your_32_byte_hex_master_key_here

# Key rotation period (in days)
KEY_ROTATION_DAYS=90

# =============================================================================
# Access Control
# =============================================================================

# Maximum secret versions to retain
MAX_SECRET_VERSIONS=10

# Enable audit logging
AUDIT_ENABLED=true

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed origins (comma-separated or * for all)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =============================================================================
# Production Configuration
# =============================================================================

# CRITICAL: In production:
# - Set NODE_ENV=production
# - Generate a secure VAULT_MASTER_KEY
# - Store master key securely (HSM, AWS KMS, etc.)
# - Enable AUDIT_ENABLED=true
# - Configure proper CORS origins
# - Set appropriate log level
