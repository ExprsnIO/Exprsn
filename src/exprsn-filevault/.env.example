# ═══════════════════════════════════════════════════════════════════════
# Exprsn FileVault - Environment Configuration
# ═══════════════════════════════════════════════════════════════════════

# Application
NODE_ENV=development
FILEVAULT_SERVICE_PORT=3007
FILEVAULT_SERVICE_HOST=localhost
FILEVAULT_DOMAIN=filevault.exprsn.io

# Database
FILEVAULT_PG_HOST=localhost
FILEVAULT_PG_PORT=5432
FILEVAULT_PG_DATABASE=exprsn_filevault
FILEVAULT_PG_USER=filevault_service
FILEVAULT_PG_PASSWORD=changeme

# Database Pool
DB_POOL_MAX=10
DB_POOL_MIN=2

# Redis Cache
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage Configuration
DEFAULT_STORAGE_BACKEND=s3

# S3 Storage
S3_ENABLED=true
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=exprsn-filevault
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Local Disk Storage
DISK_ENABLED=true
DISK_STORAGE_PATH=/var/filevault/storage
DISK_MAX_SIZE=1099511627776

# IPFS Storage
IPFS_ENABLED=false
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://ipfs.exprsn.io

# Certificate Authority Integration
FILEVAULT_CA_DOMAIN=filevault.exprsn.io
FILEVAULT_CERT_SERIAL=
FILEVAULT_PRIVATE_KEY_PATH=/secrets/filevault-service-key.pem
FILEVAULT_CERTIFICATE_PATH=/secrets/filevault-service-cert.pem
CA_ROOT_CERT_PATH=/secrets/ca-root-cert.pem
CA_SERVICE_URL=http://localhost:3000

# File Limits
MAX_FILE_SIZE=10737418240
MAX_UPLOAD_CHUNK_SIZE=10485760
MAX_VERSIONS_PER_FILE=100

# Features
ENABLE_DEDUPLICATION=true
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_VIRUS_SCANNING=false

# CORS
CORS_ORIGINS=*

# Logging
LOG_LEVEL=info
