# ═══════════════════════════════════════════════════════════
# Exprsn Timeline Service - Environment Configuration
# ═══════════════════════════════════════════════════════════

# Application
NODE_ENV=development
TIMELINE_SERVICE_PORT=3004
TIMELINE_SERVICE_HOST=localhost

# TLS Configuration
TLS_ENABLED=false
TLS_CERT_PATH=./certs/localhost-cert.pem
TLS_KEY_PATH=./certs/localhost-key.pem

# Database Configuration
TIMELINE_DB_HOST=localhost
TIMELINE_DB_PORT=5432
TIMELINE_DB_NAME=exprsn_timeline
TIMELINE_DB_USER=postgres
TIMELINE_DB_PASSWORD=postgres
DB_LOGGING=false

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Certificate Authority (CA) Configuration
CA_URL=http://localhost:3000
OCSP_RESPONDER_URL=http://localhost:2560

# Service Integrations
# Herald - Notification Service
HERALD_SERVICE_URL=http://localhost:3014
HERALD_ENABLED=true
HERALD_TIMEOUT=5000

# Spark - Real-time Messaging Service
SPARK_SERVICE_URL=http://localhost:3002
SPARK_ENABLED=true
SPARK_TIMEOUT=5000

# Prefetch - Timeline Caching Service
PREFETCH_SERVICE_URL=http://localhost:3005
PREFETCH_ENABLED=true
PREFETCH_TIMEOUT=5000

# ElasticSearch Configuration (Optional)
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_POSTS_INDEX=exprsn_posts
ELASTICSEARCH_USERS_INDEX=exprsn_users

# Job Queue Configuration
ENABLE_JOBS=true

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
