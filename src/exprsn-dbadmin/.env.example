# Application
NODE_ENV=development
PORT=3018
SERVICE_NAME=exprsn-dbadmin

# Database (for storing connection configs, query history, etc.)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exprsn_dbadmin
DB_USER=postgres
DB_PASSWORD=postgres

# CA Service
CA_URL=http://localhost:3000
CA_SERVICE_ID=dbadmin-service

# Security
SESSION_SECRET=change-this-in-production
MAX_QUERY_RESULTS=10000
QUERY_TIMEOUT_MS=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# PostgreSQL Version Support
PG_MIN_VERSION=16
PG_MAX_VERSION=18

# Logging
LOG_LEVEL=info
LOG_FILE=logs/dbadmin.log

# TLS/SSL Configuration
# By default, TLS is ENABLED with auto-generated self-signed certificate for localhost
# Set FORCE_HTTP=true to disable TLS completely (not recommended for production)
TLS_ENABLED=true
FORCE_HTTP=false

# Custom TLS Certificates (optional - leave blank to use auto-generated self-signed cert)
# For production, provide paths to your SSL certificate and private key
TLS_CERT_PATH=
TLS_KEY_PATH=
TLS_CA_PATH=

# TLS Protocol Configuration
TLS_MIN_VERSION=TLSv1.2
TLS_MAX_VERSION=TLSv1.3
TLS_CIPHERS=ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA384

# HTTP to HTTPS Redirect (optional)
# If enabled, creates an HTTP server that redirects all traffic to HTTPS
HTTP_REDIRECT=false
HTTP_REDIRECT_PORT=3080
