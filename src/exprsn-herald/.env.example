# Exprsn Herald - Environment Configuration Example
# Copy this file to .env and configure with your actual values

# ===================================
# Server Configuration
# ===================================
HERALD_PORT=3014
NODE_ENV=development

# ===================================
# Database Configuration (PostgreSQL)
# ===================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exprsn_herald
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_LOGGING=false

# ===================================
# Redis Configuration (for Bull queues)
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===================================
# Email Configuration
# ===================================
# Provider: smtp, sendgrid, or ses
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@exprsn.io

# SMTP Configuration (default provider)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=

# AWS SES Configuration (if using SES)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===================================
# Push Notification Configuration
# ===================================

# Firebase Cloud Messaging (FCM) for Android/Web
FCM_SERVER_KEY=
FCM_SERVICE_ACCOUNT=

# Apple Push Notification Service (APNS) for iOS
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=
APNS_BUNDLE_ID=com.exprsn.app

# ===================================
# SMS Configuration
# ===================================
SMS_PROVIDER=twilio

# Twilio Configuration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ===================================
# Certificate Authority Configuration
# ===================================
CA_URL=http://localhost:3000
CA_CERTIFICATE_ID=
CA_TIMEOUT=5000

# ===================================
# CORS Configuration
# ===================================
CORS_ORIGIN=*

# ===================================
# Logging Configuration
# ===================================
LOG_LEVEL=info
LOG_DIRECTORY=logs

# ===================================
# Feature Flags
# ===================================
FEATURE_EMAIL=true
FEATURE_PUSH=true
FEATURE_SMS=true
FEATURE_DIGEST=true
