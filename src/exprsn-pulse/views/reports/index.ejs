<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Exprsn Pulse</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/static/css/pulse.css">

  <%- include('../shared/head-extra') %>
</head>
<body>
  <!-- Navbar -->
  <%- include('../shared/navbar') %>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
        <%- include('../shared/sidebar') %>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <i class="bi bi-file-earmark-text text-success"></i>
            Reports
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <a href="/reports/new" class="btn btn-success">
              <i class="bi bi-file-earmark-plus"></i> New Report
            </a>
          </div>
        </div>

        <!-- Alert Container -->
        <div id="alert-container"></div>

        <!-- Search and Filters -->
        <div class="row mb-3">
          <div class="col-md-8">
            <div class="input-group">
              <span class="input-group-text">
                <i class="bi bi-search"></i>
              </span>
              <input type="text" class="form-control" id="search-input"
                     placeholder="Search reports..." value="<%= search || '' %>">
            </div>
          </div>
          <div class="col-md-4">
            <select class="form-select" id="filter-select">
              <option value="">All Reports</option>
              <option value="favorites" <%= filter === 'favorites' ? 'selected' : '' %>>Favorites</option>
              <option value="recent" <%= filter === 'recent' ? 'selected' : '' %>>Recently Executed</option>
              <option value="scheduled" <%= filter === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
            </select>
          </div>
        </div>

        <!-- Reports Table -->
        <div class="card shadow">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Format</th>
                    <th>Parameters</th>
                    <th>Updated</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (reports.length === 0) { %>
                    <tr>
                      <td colspan="6" class="text-center py-4">
                        <i class="bi bi-file-earmark-text" style="font-size: 3rem; color: #dee2e6;"></i>
                        <p class="mt-2 text-muted">
                          <%= search ? 'No reports found matching your search' : 'No reports yet' %>
                        </p>
                        <% if (!search) { %>
                          <a href="/reports/new" class="btn btn-success">
                            <i class="bi bi-file-earmark-plus"></i> Create Report
                          </a>
                        <% } %>
                      </td>
                    </tr>
                  <% } else { %>
                    <% reports.forEach(report => { %>
                      <tr>
                        <td>
                          <strong><%= report.name %></strong>
                        </td>
                        <td>
                          <small class="text-muted">
                            <%= report.description || 'No description' %>
                          </small>
                        </td>
                        <td>
                          <% const formats = (report.outputFormats || ['pdf']).join(', ').toUpperCase(); %>
                          <span class="badge bg-secondary"><%= formats %></span>
                        </td>
                        <td>
                          <% if (report.parameters && report.parameters.length > 0) { %>
                            <span class="badge bg-info">
                              <%= report.parameters.length %> params
                            </span>
                          <% } else { %>
                            <span class="text-muted">None</span>
                          <% } %>
                        </td>
                        <td>
                          <small class="text-muted">
                            <%= new Date(report.updatedAt).toLocaleDateString() %>
                          </small>
                        </td>
                        <td>
                          <div class="btn-group btn-group-sm">
                            <a href="/reports/<%= report.id %>/execute" class="btn btn-outline-success" title="Execute">
                              <i class="bi bi-play-fill"></i>
                            </a>
                            <a href="/reports/<%= report.id %>/edit" class="btn btn-outline-primary" title="Edit">
                              <i class="bi bi-pencil"></i>
                            </a>
                            <button class="btn btn-outline-secondary" onclick="scheduleReport('<%= report.id %>')" title="Schedule">
                              <i class="bi bi-clock"></i>
                            </button>
                            <button class="btn btn-outline-danger" onclick="deleteReport('<%= report.id %>')" title="Delete">
                              <i class="bi bi-trash"></i>
                            </button>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Pagination -->
        <% if (pagination.pages > 1) { %>
          <nav aria-label="Report pagination" class="mt-3">
            <ul class="pagination justify-content-center">
              <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= pagination.page - 1 %>&search=<%= search || '' %>&filter=<%= filter || '' %>">
                  Previous
                </a>
              </li>
              <% for (let i = 1; i <= pagination.pages; i++) { %>
                <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>&search=<%= search || '' %>&filter=<%= filter || '' %>">
                    <%= i %>
                  </a>
                </li>
              <% } %>
              <li class="page-item <%= pagination.page === pagination.pages ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= pagination.page + 1 %>&search=<%= search || '' %>&filter=<%= filter || '' %>">
                  Next
                </a>
              </li>
            </ul>
          </nav>
        <% } %>
      </main>
    </div>
  </div>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Core Pulse JS -->
  <script src="/static/js/pulse-core.js"></script>

  <script>
    // Search functionality
    $('#search-input').on('keyup', PulseUtils.debounce(function() {
      const search = $(this).val();
      const filter = $('#filter-select').val();
      window.location.href = `?search=${encodeURIComponent(search)}&filter=${filter}`;
    }, 500));

    // Filter functionality
    $('#filter-select').on('change', function() {
      const filter = $(this).val();
      const search = $('#search-input').val();
      window.location.href = `?search=${encodeURIComponent(search)}&filter=${filter}`;
    });

    // Schedule report
    function scheduleReport(id) {
      window.location.href = `/schedules/new?reportId=${id}`;
    }

    // Delete report
    async function deleteReport(id) {
      // Find the report name from the row
      const $row = $(`button[onclick*="deleteReport('${id}')"]`).closest('tr');
      const name = $row.find('strong').first().text().trim();

      PulseModals.showDeleteConfirm('Report', name, async function() {
        try {
          await PulseAPI.reports.delete(id);
          PulseUtils.showAlert('Report deleted successfully', 'success');
          setTimeout(() => window.location.reload(), 1000);
        } catch (error) {
          PulseUtils.showAlert('Failed to delete report: ' + error.message, 'danger');
        }
      });
    }
  </script>

  <%- include('../shared/body-extra') %>
</body>
</html>
