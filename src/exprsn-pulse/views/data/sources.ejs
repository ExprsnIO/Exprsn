<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Exprsn Pulse</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/static/css/pulse.css">

  <%- include('../shared/head-extra') %>
</head>
<body>
  <!-- Navbar -->
  <%- include('../shared/navbar') %>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
        <%- include('../shared/sidebar') %>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <i class="bi bi-database text-info"></i>
            Data Sources
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <a href="/data/sources/new" class="btn btn-info">
              <i class="bi bi-database-add"></i> New Data Source
            </a>
          </div>
        </div>

        <!-- Alert Container -->
        <div id="alert-container"></div>

        <!-- Data Sources Grid -->
        <div class="row">
          <% if (dataSources.length === 0) { %>
            <div class="col-12">
              <div class="card">
                <div class="card-body text-center py-5">
                  <i class="bi bi-database" style="font-size: 4rem; color: #dee2e6;"></i>
                  <h4 class="mt-3">No data sources configured</h4>
                  <p class="text-muted">Connect to Exprsn services, databases, or REST APIs to get started</p>
                  <a href="/data/sources/new" class="btn btn-info">
                    <i class="bi bi-database-add"></i> Add Data Source
                  </a>
                </div>
              </div>
            </div>
          <% } else { %>
            <% dataSources.forEach(source => { %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                  <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                      <% if (source.type === 'exprsn-service') { %>
                        <i class="bi bi-globe text-primary"></i>
                      <% } else if (source.type === 'postgresql') { %>
                        <i class="bi bi-database-fill text-info"></i>
                      <% } else if (source.type === 'rest-api') { %>
                        <i class="bi bi-cloud text-success"></i>
                      <% } else { %>
                        <i class="bi bi-code-square text-secondary"></i>
                      <% } %>
                      <%= source.name %>
                    </h6>
                    <span class="badge bg-<%= source.isActive ? 'success' : 'secondary' %>">
                      <%= source.isActive ? 'Active' : 'Inactive' %>
                    </span>
                  </div>
                  <div class="card-body">
                    <% if (source.description) { %>
                      <p class="card-text text-muted small"><%= source.description %></p>
                    <% } %>

                    <div class="mb-2">
                      <strong>Type:</strong>
                      <span class="badge bg-secondary">
                        <%= source.type.replace('-', ' ').toUpperCase() %>
                      </span>
                    </div>

                    <% if (source.type === 'exprsn-service') { %>
                      <div class="mb-2">
                        <strong>Service:</strong> <%= source.serviceName %>
                      </div>
                    <% } else if (source.type === 'postgresql') { %>
                      <div class="mb-2">
                        <strong>Host:</strong> <%= source.config.host %>:<%= source.config.port || 5432 %>
                      </div>
                      <div class="mb-2">
                        <strong>Database:</strong> <%= source.config.database %>
                      </div>
                    <% } else if (source.type === 'rest-api') { %>
                      <div class="mb-2">
                        <strong>URL:</strong> <%= source.config.baseURL %>
                      </div>
                    <% } %>

                    <div class="text-muted small mt-3">
                      <i class="bi bi-clock"></i>
                      Updated <%= new Date(source.updatedAt).toLocaleDateString() %>
                    </div>
                  </div>
                  <div class="card-footer bg-white">
                    <div class="btn-group w-100">
                      <button class="btn btn-sm btn-outline-success" onclick="testConnection('<%= source.id %>')">
                        <i class="bi bi-check-circle"></i> Test
                      </button>
                      <% if (source.type !== 'custom-query') { %>
                        <button class="btn btn-sm btn-outline-info" onclick="discoverSchema('<%= source.id %>')">
                          <i class="bi bi-search"></i> Discover
                        </button>
                      <% } %>
                      <a href="/data/sources/<%= source.id %>/edit" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil"></i> Edit
                      </a>
                      <button class="btn btn-sm btn-outline-danger" onclick="deleteSource('<%= source.id %>')">
                        <i class="bi bi-trash"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>

        <!-- Quick Info -->
        <div class="row mt-4">
          <div class="col-12">
            <div class="card bg-light">
              <div class="card-body">
                <h6 class="mb-3">
                  <i class="bi bi-info-circle"></i> Supported Data Sources
                </h6>
                <div class="row">
                  <div class="col-md-3 mb-2">
                    <strong><i class="bi bi-globe text-primary"></i> Exprsn Services</strong>
                    <p class="small text-muted mb-0">Connect to any of the 18 Exprsn services (CA, Auth, Timeline, Spark, etc.)</p>
                  </div>
                  <div class="col-md-3 mb-2">
                    <strong><i class="bi bi-database-fill text-info"></i> PostgreSQL</strong>
                    <p class="small text-muted mb-0">Connect to PostgreSQL databases with custom SQL queries</p>
                  </div>
                  <div class="col-md-3 mb-2">
                    <strong><i class="bi bi-cloud text-success"></i> REST APIs</strong>
                    <p class="small text-muted mb-0">Fetch data from external REST APIs with authentication</p>
                  </div>
                  <div class="col-md-3 mb-2">
                    <strong><i class="bi bi-code-square text-secondary"></i> Custom Queries</strong>
                    <p class="small text-muted mb-0">Execute custom JavaScript or JSONLex expressions</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Core Pulse JS -->
  <script src="/static/js/pulse-core.js"></script>

  <script>
    // Test connection
    async function testConnection(id) {
      try {
        PulseUtils.showLoading();
        const result = await PulseAPI.dataSources.test(id);
        PulseUtils.hideLoading();

        PulseUtils.showAlert(
          `Connection successful! ${result.message || 'Data source is reachable'}`,
          'success'
        );
      } catch (error) {
        PulseUtils.hideLoading();
        PulseUtils.showAlert('Connection failed: ' + error.message, 'danger');
      }
    }

    // Discover schema
    async function discoverSchema(id) {
      try {
        PulseUtils.showLoading();
        const result = await PulseAPI.dataSources.discover(id);
        PulseUtils.hideLoading();

        const tables = result.data?.tables || result.data?.endpoints || [];
        PulseUtils.showAlert(
          `Discovery complete! Found ${tables.length} tables/endpoints`,
          'success'
        );
      } catch (error) {
        PulseUtils.hideLoading();
        PulseUtils.showAlert('Discovery failed: ' + error.message, 'danger');
      }
    }

    // Delete data source
    async function deleteSource(id) {
      // Find the data source name from the card
      const $card = $(`button[onclick*="deleteSource('${id}')"]`).closest('.card');
      const name = $card.find('h6').first().text().trim();

      PulseModals.showDeleteConfirm('Data Source', name, async function() {
        try {
          await PulseAPI.dataSources.delete(id);
          PulseUtils.showAlert('Data source deleted successfully', 'success');
          setTimeout(() => window.location.reload(), 1000);
        } catch (error) {
          PulseUtils.showAlert('Failed to delete data source: ' + error.message, 'danger');
        }
      });
    }
  </script>

  <%- include('../shared/body-extra') %>
</body>
</html>
