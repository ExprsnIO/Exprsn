<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Exprsn Pulse</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/static/css/pulse.css">

  <%- include('../shared/head-extra') %>
</head>
<body>
  <!-- Navbar -->
  <%- include('../shared/navbar') %>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
        <%- include('../shared/sidebar') %>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <i class="bi bi-filetype-sql text-info"></i>
            Queries
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <a href="/data/queries/new" class="btn btn-info">
              <i class="bi bi-plus-circle"></i> New Query
            </a>
          </div>
        </div>

        <!-- Alert Container -->
        <div id="alert-container"></div>

        <!-- Search and Filter -->
        <div class="row mb-3">
          <div class="col-md-6">
            <input type="text" class="form-control" id="search-query" placeholder="Search queries...">
          </div>
          <div class="col-md-3">
            <select class="form-select" id="filter-type">
              <option value="">All Types</option>
              <option value="sql">SQL</option>
              <option value="rest">REST API</option>
              <option value="jsonlex">JSONLex</option>
              <option value="javascript">JavaScript</option>
            </select>
          </div>
          <div class="col-md-3">
            <select class="form-select" id="filter-source">
              <option value="">All Data Sources</option>
              <% if (queries.length > 0) {
                const sources = [...new Set(queries.map(q => q.dataSource?.name).filter(Boolean))];
                sources.forEach(source => { %>
                  <option value="<%= source %>"><%= source %></option>
                <% });
              } %>
            </select>
          </div>
        </div>

        <!-- Queries Table -->
        <div class="card shadow">
          <div class="card-body">
            <% if (queries.length === 0) { %>
              <div class="text-center py-5">
                <i class="bi bi-filetype-sql" style="font-size: 4rem; color: #dee2e6;"></i>
                <h4 class="mt-3">No queries yet</h4>
                <p class="text-muted">Create reusable queries to power your visualizations and reports</p>
                <a href="/data/queries/new" class="btn btn-info">
                  <i class="bi bi-plus-circle"></i> Create Query
                </a>
              </div>
            <% } else { %>
              <div class="table-responsive">
                <table class="table table-hover align-middle">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Type</th>
                      <th>Data Source</th>
                      <th>Description</th>
                      <th>Updated</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody id="queries-tbody">
                    <% queries.forEach(query => { %>
                      <tr data-query-id="<%= query.id %>" data-type="<%= query.queryType %>" data-source="<%= query.dataSource?.name || '' %>">
                        <td>
                          <strong><%= query.name %></strong>
                        </td>
                        <td>
                          <span class="badge bg-<%= query.queryType === 'sql' ? 'primary' : query.queryType === 'rest' ? 'success' : query.queryType === 'jsonlex' ? 'warning' : 'secondary' %>">
                            <%= query.queryType.toUpperCase() %>
                          </span>
                        </td>
                        <td>
                          <% if (query.dataSource) { %>
                            <a href="/data/sources/<%= query.dataSource.id %>/edit">
                              <i class="bi bi-database"></i> <%= query.dataSource.name %>
                            </a>
                          <% } else { %>
                            <span class="text-muted">N/A</span>
                          <% } %>
                        </td>
                        <td>
                          <span class="text-muted small">
                            <%= query.description || 'No description' %>
                          </span>
                        </td>
                        <td>
                          <small class="text-muted">
                            <%= new Date(query.updatedAt).toLocaleDateString() %>
                          </small>
                        </td>
                        <td>
                          <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-success" onclick="testQuery('<%= query.id %>')" title="Test Query">
                              <i class="bi bi-play-fill"></i>
                            </button>
                            <button class="btn btn-outline-primary" onclick="viewQuery('<%= query.id %>')" title="View Details">
                              <i class="bi bi-eye"></i>
                            </button>
                            <a href="/data/queries/<%= query.id %>/edit" class="btn btn-outline-warning" title="Edit">
                              <i class="bi bi-pencil"></i>
                            </a>
                            <button class="btn btn-outline-danger" onclick="deleteQuery('<%= query.id %>')" title="Delete">
                              <i class="bi bi-trash"></i>
                            </button>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Query Statistics -->
        <div class="row mt-4">
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">Total Queries</h5>
                <p class="display-6"><%= queries.length %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">SQL Queries</h5>
                <p class="display-6"><%= queries.filter(q => q.queryType === 'sql').length %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">REST API</h5>
                <p class="display-6"><%= queries.filter(q => q.queryType === 'rest').length %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">JSONLex</h5>
                <p class="display-6"><%= queries.filter(q => q.queryType === 'jsonlex').length %></p>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Test Results Modal -->
  <div class="modal fade" id="testResultsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Query Test Results</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div id="test-results-container">
            <div class="text-center py-5">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Running query...</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Core Pulse JS -->
  <script src="/static/js/pulse-core.js"></script>

  <script>
    let testModal;

    $(document).ready(function() {
      testModal = new bootstrap.Modal('#testResultsModal');

      // Search functionality
      $('#search-query').on('keyup', function() {
        filterQueries();
      });

      // Type filter
      $('#filter-type').on('change', function() {
        filterQueries();
      });

      // Source filter
      $('#filter-source').on('change', function() {
        filterQueries();
      });
    });

    function filterQueries() {
      const searchTerm = $('#search-query').val().toLowerCase();
      const typeFilter = $('#filter-type').val();
      const sourceFilter = $('#filter-source').val();

      $('#queries-tbody tr').each(function() {
        const $row = $(this);
        const name = $row.find('strong').text().toLowerCase();
        const type = $row.data('type');
        const source = $row.data('source');

        let show = true;

        if (searchTerm && !name.includes(searchTerm)) {
          show = false;
        }

        if (typeFilter && type !== typeFilter) {
          show = false;
        }

        if (sourceFilter && source !== sourceFilter) {
          show = false;
        }

        $row.toggle(show);
      });
    }

    // Test query
    async function testQuery(id) {
      testModal.show();
      $('#test-results-container').html(`
        <div class="text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Running query...</span>
          </div>
        </div>
      `);

      try {
        const result = await PulseAPI.queries.execute(id, {});
        const data = result.data;

        if (data && data.rows && data.rows.length > 0) {
          const columns = Object.keys(data.rows[0]);
          let html = `
            <p class="text-success"><i class="bi bi-check-circle"></i> Query executed successfully</p>
            <p class="text-muted">Returned ${data.rows.length} rows</p>
            <div class="table-responsive">
              <table class="table table-sm table-striped">
                <thead>
                  <tr>
                    ${columns.map(col => `<th>${col}</th>`).join('')}
                  </tr>
                </thead>
                <tbody>
                  ${data.rows.slice(0, 10).map(row => `
                    <tr>
                      ${columns.map(col => `<td>${row[col]}</td>`).join('')}
                    </tr>
                  `).join('')}
                </tbody>
              </table>
            </div>
            ${data.rows.length > 10 ? `<p class="text-muted small">Showing first 10 of ${data.rows.length} rows</p>` : ''}
          `;
          $('#test-results-container').html(html);
        } else {
          $('#test-results-container').html('<p class="text-warning">Query executed but returned no data</p>');
        }
      } catch (error) {
        $('#test-results-container').html(`
          <p class="text-danger"><i class="bi bi-x-circle"></i> Query failed</p>
          <pre class="bg-light p-3">${error.message}</pre>
        `);
      }
    }

    // View query details
    async function viewQuery(id) {
      try {
        const result = await PulseAPI.queries.get(id);
        const query = result.data;

        PulseModals.showDetails('Query Details', {
          'Name': query.name,
          'Type': query.queryType.toUpperCase(),
          'Data Source': query.dataSource?.name || 'N/A',
          'Description': query.description || 'N/A',
          'Created': new Date(query.createdAt).toLocaleString(),
          'Updated': new Date(query.updatedAt).toLocaleString()
        });
      } catch (error) {
        PulseUtils.showAlert('Failed to load query: ' + error.message, 'danger');
      }
    }

    // Delete query
    async function deleteQuery(id) {
      const row = $(`tr[data-query-id="${id}"]`);
      const name = row.find('strong').text();

      PulseModals.showDeleteConfirm('Query', name, async function() {
        try {
          await PulseAPI.queries.delete(id);
          PulseUtils.showAlert('Query deleted successfully', 'success');
          setTimeout(() => window.location.reload(), 1000);
        } catch (error) {
          PulseUtils.showAlert('Failed to delete query: ' + error.message, 'danger');
        }
      });
    }
  </script>

  <%- include('../shared/body-extra') %>
</body>
</html>
