<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/static/css/pulse.css">

  <%- include('../shared/head-extra') %>
</head>
<body>
  <!-- Navbar -->
  <%- include('../shared/navbar') %>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
        <%- include('../shared/sidebar') %>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <%= dashboard.name %>
            <% if (dashboard.isRealtime) { %>
              <span class="badge bg-success">
                <i class="bi bi-broadcast"></i> Real-time
              </span>
              <span id="realtime-status" class="badge bg-secondary">
                <i class="bi bi-circle-fill text-muted"></i> Connecting...
              </span>
            <% } %>
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <a href="/dashboards/<%= dashboard.id %>/edit" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
              </a>
              <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshDashboard()">
                <i class="bi bi-arrow-clockwise"></i> Refresh
              </button>
              <button type="button" class="btn btn-sm btn-outline-secondary" onclick="exportDashboard()">
                <i class="bi bi-download"></i> Export
              </button>
            </div>
            <a href="/dashboards" class="btn btn-sm btn-outline-secondary">
              <i class="bi bi-arrow-left"></i> Back
            </a>
          </div>
        </div>

        <!-- Alert Container -->
        <div id="alert-container"></div>

        <% if (dashboard.description) { %>
          <div class="alert alert-info">
            <%= dashboard.description %>
          </div>
        <% } %>

        <!-- Dashboard Grid -->
        <div id="dashboard-container" class="dashboard-grid" style="position: relative;">
          <% if (dashboard.items && dashboard.items.length === 0) { %>
            <div class="col-12 text-center py-5">
              <i class="bi bi-grid-3x3-gap" style="font-size: 4rem; color: #dee2e6;"></i>
              <h4 class="mt-3">This dashboard is empty</h4>
              <p class="text-muted">Add visualizations to get started</p>
              <a href="/dashboards/<%= dashboard.id %>/edit" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit Dashboard
              </a>
            </div>
          <% } else { %>
            <% dashboard.items.forEach(item => { %>
              <div class="dashboard-item"
                   data-item-id="<%= item.id %>"
                   style="grid-column: span <%= item.width || 4 %>; grid-row: span <%= item.height || 1 %>;">
                <div class="dashboard-item-header">
                  <h6 class="dashboard-item-title">
                    <%= item.visualization ? item.visualization.name : item.title %>
                  </h6>
                  <div class="dashboard-item-actions">
                    <button class="btn btn-sm btn-outline-secondary" onclick="refreshItem('<%= item.id %>')">
                      <i class="bi bi-arrow-clockwise"></i>
                    </button>
                  </div>
                </div>
                <div class="dashboard-item-content" id="item-<%= item.id %>">
                  <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                      <span class="visually-hidden">Loading...</span>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>

        <!-- Refresh Info -->
        <% if (dashboard.refreshInterval && dashboard.refreshInterval > 0) { %>
          <div class="alert alert-info mt-3">
            <i class="bi bi-arrow-clockwise"></i>
            Auto-refresh enabled: Every <%= dashboard.refreshInterval %> seconds
            <span id="next-refresh"></span>
          </div>
        <% } %>
      </main>
    </div>
  </div>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <!-- D3.js -->
  <script src="https://d3js.org/d3.v7.min.js"></script>
  <!-- Socket.IO Client -->
  <script src="/socket.io/socket.io.js"></script>
  <!-- Core Pulse JS -->
  <script src="/static/js/pulse-core.js"></script>

  <script>
    const dashboardId = '<%= dashboard.id %>';
    const isRealtime = <%= dashboard.isRealtime || false %>;
    const refreshInterval = <%= dashboard.refreshInterval || 0 %>;
    let socket = null;
    let refreshTimer = null;

    // Initialize dashboard
    $(document).ready(async function() {
      await loadDashboardData();

      // Setup real-time updates
      if (isRealtime) {
        setupRealtimeUpdates();
      }

      // Setup auto-refresh
      if (refreshInterval > 0) {
        setupAutoRefresh();
      }
    });

    // Load dashboard data
    async function loadDashboardData() {
      try {
        const response = await PulseAPI.dashboards.render(dashboardId);
        renderDashboard(response.data);
      } catch (error) {
        PulseUtils.showAlert('Failed to load dashboard: ' + error.message, 'danger');
      }
    }

    // Render dashboard items
    function renderDashboard(data) {
      data.items.forEach(item => {
        const container = $(`#item-${item.id}`);

        if (item.visualization) {
          renderVisualization(container, item.visualization, item.data);
        } else {
          container.html('<p class="text-muted">No visualization configured</p>');
        }
      });
    }

    // Render individual visualization
    function renderVisualization(container, viz, data) {
      container.empty();

      if (viz.type === 'table') {
        renderTable(container, data);
      } else if (viz.renderer === 'chartjs') {
        renderChartJS(container, viz, data);
      } else if (viz.renderer === 'd3') {
        renderD3(container, viz, data);
      }
    }

    // Render table
    function renderTable(container, data) {
      if (!data || data.length === 0) {
        container.html('<p class="text-muted">No data available</p>');
        return;
      }

      const columns = Object.keys(data[0]);
      let html = '<table class="table table-striped table-hover"><thead><tr>';

      columns.forEach(col => {
        html += `<th>${col}</th>`;
      });
      html += '</tr></thead><tbody>';

      data.forEach(row => {
        html += '<tr>';
        columns.forEach(col => {
          html += `<td>${row[col]}</td>`;
        });
        html += '</tr>';
      });

      html += '</tbody></table>';
      container.html(html);
    }

    // Render Chart.js visualization
    function renderChartJS(container, viz, data) {
      const canvas = $('<canvas></canvas>');
      container.append(canvas);

      const chartData = {
        labels: data.map(row => row[viz.dataMapping.x]),
        datasets: [{
          label: viz.dataMapping.y,
          data: data.map(row => row[viz.dataMapping.y]),
          backgroundColor: viz.config.backgroundColor || 'rgba(54, 162, 235, 0.7)',
          borderColor: viz.config.borderColor || 'rgba(54, 162, 235, 1)',
          borderWidth: 1
        }]
      };

      new Chart(canvas[0], {
        type: viz.type,
        data: chartData,
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: { display: true },
            title: { display: false }
          }
        }
      });
    }

    // Render D3 visualization
    function renderD3(container, viz, data) {
      // Simplified D3 rendering - extend as needed
      container.html('<p class="text-muted">D3 visualization: ' + viz.type + '</p>');
    }

    // Setup real-time updates via Socket.IO
    function setupRealtimeUpdates() {
      socket = io();

      socket.on('connect', () => {
        console.log('Socket.IO connected');
        $('#realtime-status').html('<i class="bi bi-circle-fill text-success"></i> Connected');
        socket.emit('subscribe:dashboard', dashboardId);
      });

      socket.on('disconnect', () => {
        $('#realtime-status').html('<i class="bi bi-circle-fill text-danger"></i> Disconnected');
      });

      socket.on('dashboard:data', (data) => {
        renderDashboard(data);
      });

      socket.on('dashboard:update', (data) => {
        renderDashboard(data);
      });
    }

    // Setup auto-refresh
    function setupAutoRefresh() {
      let countdown = refreshInterval;

      refreshTimer = setInterval(() => {
        countdown--;
        $('#next-refresh').text(`(${countdown}s)`);

        if (countdown <= 0) {
          loadDashboardData();
          countdown = refreshInterval;
        }
      }, 1000);
    }

    // Refresh entire dashboard
    async function refreshDashboard() {
      await loadDashboardData();
      PulseUtils.showAlert('Dashboard refreshed', 'success');
    }

    // Refresh single item
    async function refreshItem(itemId) {
      PulseUtils.showAlert('Item refresh not yet implemented', 'info');
    }

    // Export dashboard
    function exportDashboard() {
      PulseUtils.showAlert('Export functionality coming soon', 'info');
    }

    // Cleanup on page unload
    $(window).on('beforeunload', function() {
      if (socket) {
        socket.disconnect();
      }
      if (refreshTimer) {
        clearInterval(refreshTimer);
      }
    });
  </script>

  <%- include('../shared/body-extra') %>
</body>
</html>
