<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Exprsn Pulse</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/static/css/pulse.css">

  <%- include('../shared/head-extra') %>
</head>
<body>
  <!-- Navbar -->
  <%- include('../shared/navbar') %>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
        <%- include('../shared/sidebar') %>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <i class="bi bi-grid-3x3-gap text-primary"></i>
            Dashboards
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <a href="/dashboards/new" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i> New Dashboard
            </a>
          </div>
        </div>

        <!-- Alert Container -->
        <div id="alert-container"></div>

        <!-- Search and Filters -->
        <div class="row mb-3">
          <div class="col-md-8">
            <div class="input-group">
              <span class="input-group-text">
                <i class="bi bi-search"></i>
              </span>
              <input type="text" class="form-control" id="search-input"
                     placeholder="Search dashboards..." value="<%= search || '' %>">
            </div>
          </div>
          <div class="col-md-4">
            <select class="form-select" id="filter-select">
              <option value="">All Dashboards</option>
              <option value="favorites" <%= filter === 'favorites' ? 'selected' : '' %>>Favorites</option>
              <option value="recent" <%= filter === 'recent' ? 'selected' : '' %>>Recently Viewed</option>
              <option value="realtime" <%= filter === 'realtime' ? 'selected' : '' %>>Real-time</option>
            </select>
          </div>
        </div>

        <!-- Dashboards Grid -->
        <div class="row">
          <% if (dashboards.length === 0) { %>
            <div class="col-12">
              <div class="card">
                <div class="card-body text-center py-5">
                  <i class="bi bi-grid-3x3-gap" style="font-size: 4rem; color: #dee2e6;"></i>
                  <h4 class="mt-3">No dashboards found</h4>
                  <p class="text-muted">
                    <%= search ? 'Try adjusting your search or filters' : 'Get started by creating your first dashboard' %>
                  </p>
                  <a href="/dashboards/new" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create Dashboard
                  </a>
                </div>
              </div>
            </div>
          <% } else { %>
            <% dashboards.forEach(dashboard => { %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card card-dashboard h-100" onclick="window.location.href='/dashboards/<%= dashboard.id %>'">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                      <h5 class="card-title mb-0"><%= dashboard.name %></h5>
                      <div class="dropdown" onclick="event.stopPropagation()">
                        <button class="btn btn-sm btn-link text-muted" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                          <i class="bi bi-three-dots-vertical"></i>
                        </button>
                        <ul class="dropdown-menu">
                          <li>
                            <a class="dropdown-item" href="/dashboards/<%= dashboard.id %>">
                              <i class="bi bi-eye"></i> View
                            </a>
                          </li>
                          <li>
                            <a class="dropdown-item" href="/dashboards/<%= dashboard.id %>/edit">
                              <i class="bi bi-pencil"></i> Edit
                            </a>
                          </li>
                          <li><hr class="dropdown-divider"></li>
                          <li>
                            <a class="dropdown-item text-danger" href="#"
                               onclick="deleteDashboard('<%= dashboard.id %>')">
                              <i class="bi bi-trash"></i> Delete
                            </a>
                          </li>
                        </ul>
                      </div>
                    </div>

                    <% if (dashboard.description) { %>
                      <p class="card-text text-muted small"><%= dashboard.description %></p>
                    <% } %>

                    <div class="mt-3">
                      <% if (dashboard.isRealtime) { %>
                        <span class="badge bg-success me-1">
                          <i class="bi bi-broadcast"></i> Real-time
                        </span>
                      <% } %>
                      <% if (dashboard.items && dashboard.items.length > 0) { %>
                        <span class="badge bg-info">
                          <%= dashboard.items.length %> items
                        </span>
                      <% } %>
                    </div>

                    <div class="mt-3 text-muted small">
                      <i class="bi bi-clock"></i>
                      Updated <%= new Date(dashboard.updatedAt).toLocaleDateString() %>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>

        <!-- Pagination -->
        <% if (pagination.pages > 1) { %>
          <nav aria-label="Dashboard pagination">
            <ul class="pagination justify-content-center">
              <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= pagination.page - 1 %>&search=<%= search || '' %>&filter=<%= filter || '' %>">
                  Previous
                </a>
              </li>
              <% for (let i = 1; i <= pagination.pages; i++) { %>
                <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>&search=<%= search || '' %>&filter=<%= filter || '' %>">
                    <%= i %>
                  </a>
                </li>
              <% } %>
              <li class="page-item <%= pagination.page === pagination.pages ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= pagination.page + 1 %>&search=<%= search || '' %>&filter=<%= filter || '' %>">
                  Next
                </a>
              </li>
            </ul>
          </nav>
        <% } %>
      </main>
    </div>
  </div>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Core Pulse JS -->
  <script src="/static/js/pulse-core.js"></script>

  <script>
    // Search functionality
    $('#search-input').on('keyup', PulseUtils.debounce(function() {
      const search = $(this).val();
      const filter = $('#filter-select').val();
      window.location.href = `?search=${encodeURIComponent(search)}&filter=${filter}`;
    }, 500));

    // Filter functionality
    $('#filter-select').on('change', function() {
      const filter = $(this).val();
      const search = $('#search-input').val();
      window.location.href = `?search=${encodeURIComponent(search)}&filter=${filter}`;
    });

    // Delete dashboard
    async function deleteDashboard(id) {
      // Find the dashboard name from the card
      const $card = $(`[onclick*="deleteDashboard('${id}')"]`).closest('.card');
      const name = $card.find('h6').first().text().trim();

      PulseModals.showDeleteConfirm('Dashboard', name, async function() {
        try {
          await PulseAPI.dashboards.delete(id);
          PulseUtils.showAlert('Dashboard deleted successfully', 'success');
          setTimeout(() => window.location.reload(), 1000);
        } catch (error) {
          PulseUtils.showAlert('Failed to delete dashboard: ' + error.message, 'danger');
        }
      });
    }
  </script>

  <%- include('../shared/body-extra') %>
</body>
</html>
