<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Exprsn Pulse</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/static/css/pulse.css">

  <%- include('../shared/head-extra') %>
</head>
<body>
  <!-- Navbar -->
  <%- include('../shared/navbar') %>

  <div class="container-fluid">
    <div class="row">
      <!-- Main Content -->
      <main class="col-12 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <i class="bi bi-bar-chart text-warning"></i>
            <%= visualization ? 'Edit Visualization' : 'New Visualization' %>
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <button type="button" class="btn btn-warning" onclick="saveVisualization()">
                <i class="bi bi-save"></i> Save
              </button>
              <button type="button" class="btn btn-outline-secondary" onclick="previewVisualization()">
                <i class="bi bi-eye"></i> Preview
              </button>
            </div>
            <a href="/visualizations" class="btn btn-outline-secondary">
              <i class="bi bi-x-circle"></i> Cancel
            </a>
          </div>
        </div>

        <!-- Alert Container -->
        <div id="alert-container"></div>

        <div class="row">
          <!-- Configuration Panel -->
          <div class="col-md-4 mb-4">
            <!-- Basic Info -->
            <div class="card shadow mb-3">
              <div class="card-header">
                <h6 class="m-0">
                  <i class="bi bi-info-circle"></i> Basic Information
                </h6>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <label for="viz-name" class="form-label">Name *</label>
                  <input type="text" class="form-control" id="viz-name"
                         value="<%= visualization ? visualization.name : '' %>"
                         placeholder="e.g., Sales by Region" required>
                </div>

                <div class="mb-3">
                  <label for="viz-description" class="form-label">Description</label>
                  <textarea class="form-control" id="viz-description" rows="2"
                            placeholder="Optional description"><%= visualization ? visualization.description || '' : '' %></textarea>
                </div>

                <div class="mb-3">
                  <label for="dataset-select" class="form-label">Dataset *</label>
                  <select class="form-select" id="dataset-select" required>
                    <option value="">Select dataset...</option>
                    <% datasets.forEach(dataset => { %>
                      <option value="<%= dataset.id %>"
                              <%= visualization && visualization.datasetId === dataset.id ? 'selected' : '' %>>
                        <%= dataset.name %>
                      </option>
                    <% }) %>
                  </select>
                  <small class="text-muted">
                    <a href="/datasets/new">Create new dataset</a>
                  </small>
                </div>
              </div>
            </div>

            <!-- Visualization Type -->
            <div class="card shadow mb-3">
              <div class="card-header">
                <h6 class="m-0">
                  <i class="bi bi-graph-up"></i> Visualization Type
                </h6>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <label for="viz-type" class="form-label">Chart Type *</label>
                  <select class="form-select" id="viz-type" required>
                    <optgroup label="Chart.js - Basic Charts">
                      <option value="bar">Bar Chart</option>
                      <option value="line">Line Chart</option>
                      <option value="pie">Pie Chart</option>
                      <option value="doughnut">Doughnut Chart</option>
                      <option value="radar">Radar Chart</option>
                      <option value="polarArea">Polar Area</option>
                      <option value="bubble">Bubble Chart</option>
                      <option value="scatter">Scatter Plot</option>
                      <option value="area">Area Chart</option>
                      <option value="stackedArea">Stacked Area</option>
                    </optgroup>
                    <optgroup label="D3.js - Advanced Visualizations">
                      <option value="heatmap">Heatmap</option>
                      <option value="treemap">Treemap</option>
                      <option value="sunburst">Sunburst</option>
                      <option value="sankey">Sankey Diagram</option>
                      <option value="network">Network Graph</option>
                      <option value="chord">Chord Diagram</option>
                      <option value="calendar">Calendar View</option>
                      <option value="geographic">Geographic Map</option>
                    </optgroup>
                    <optgroup label="Data Displays">
                      <option value="table">Table</option>
                      <option value="pivot">Pivot Table</option>
                      <option value="metric">Metric Card</option>
                      <option value="gauge">Gauge</option>
                    </optgroup>
                  </select>
                </div>

                <div class="alert alert-info small mb-0">
                  <strong>Selected:</strong> <span id="type-description">Choose a chart type</span>
                </div>
              </div>
            </div>

            <!-- Data Mapping -->
            <div class="card shadow mb-3">
              <div class="card-header">
                <h6 class="m-0">
                  <i class="bi bi-diagram-3"></i> Data Mapping
                </h6>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <label for="data-x" class="form-label">X Axis / Labels</label>
                  <input type="text" class="form-control" id="data-x"
                         placeholder="Field name for X axis">
                  <small class="text-muted">e.g., date, category, region</small>
                </div>

                <div class="mb-3">
                  <label for="data-y" class="form-label">Y Axis / Values</label>
                  <input type="text" class="form-control" id="data-y"
                         placeholder="Field name for Y axis">
                  <small class="text-muted">e.g., sales, count, revenue</small>
                </div>

                <div class="mb-3" id="series-field" style="display: none;">
                  <label for="data-series" class="form-label">Series (Optional)</label>
                  <input type="text" class="form-control" id="data-series"
                         placeholder="Field for grouping">
                  <small class="text-muted">e.g., product, department</small>
                </div>
              </div>
            </div>

            <!-- Style Options -->
            <div class="card shadow mb-3">
              <div class="card-header">
                <h6 class="m-0">
                  <i class="bi bi-palette"></i> Style Options
                </h6>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-6 mb-3">
                    <label for="color-scheme" class="form-label">Color Scheme</label>
                    <select class="form-select form-select-sm" id="color-scheme">
                      <option value="default">Default</option>
                      <option value="blue">Blue</option>
                      <option value="green">Green</option>
                      <option value="red">Red</option>
                      <option value="rainbow">Rainbow</option>
                    </select>
                  </div>
                  <div class="col-6 mb-3">
                    <label for="chart-height" class="form-label">Height (px)</label>
                    <input type="number" class="form-control form-control-sm" id="chart-height" value="400">
                  </div>
                </div>

                <div class="form-check mb-2">
                  <input type="checkbox" class="form-check-input" id="show-legend" checked>
                  <label class="form-check-label" for="show-legend">
                    Show Legend
                  </label>
                </div>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="show-grid">
                  <label class="form-check-label" for="show-grid">
                    Show Grid Lines
                  </label>
                </div>
              </div>
            </div>
          </div>

          <!-- Preview Panel -->
          <div class="col-md-8 mb-4">
            <div class="card shadow">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0">
                  <i class="bi bi-eye"></i> Live Preview
                </h6>
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshPreview()">
                  <i class="bi bi-arrow-clockwise"></i> Refresh
                </button>
              </div>
              <div class="card-body">
                <div id="preview-container" style="min-height: 500px;">
                  <div class="text-center py-5">
                    <i class="bi bi-bar-chart" style="font-size: 4rem; color: #dee2e6;"></i>
                    <p class="mt-3 text-muted">
                      Select a dataset and configure your visualization to see a preview
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <!-- D3.js -->
  <script src="https://d3js.org/d3.v7.min.js"></script>
  <!-- Core Pulse JS -->
  <script src="/static/js/pulse-core.js"></script>

  <script>
    const vizId = <%= visualization ? `'${visualization.id}'` : 'null' %>;
    let currentChart = null;

    $(document).ready(function() {
      // Update type description
      $('#viz-type').on('change', function() {
        const type = $(this).val();
        updateTypeDescription(type);

        // Show series field for certain chart types
        if (['bar', 'line', 'area'].includes(type)) {
          $('#series-field').show();
        } else {
          $('#series-field').hide();
        }
      });

      // Auto-refresh preview on changes
      $('#dataset-select, #viz-type, #data-x, #data-y, #data-series, #color-scheme').on('change', PulseUtils.debounce(refreshPreview, 1000));

      // Load existing data
      <% if (visualization) { %>
        $('#viz-type').val('<%= visualization.type %>').trigger('change');
        <% if (visualization.dataMapping) { %>
          $('#data-x').val('<%= visualization.dataMapping.x || "" %>');
          $('#data-y').val('<%= visualization.dataMapping.y || "" %>');
          $('#data-series').val('<%= visualization.dataMapping.series || "" %>');
        <% } %>
        <% if (visualization.config) { %>
          $('#color-scheme').val('<%= visualization.config.colorScheme || "default" %>');
          $('#chart-height').val('<%= visualization.config.height || 400 %>');
          $('#show-legend').prop('checked', <%= visualization.config.showLegend !== false %>);
          $('#show-grid').prop('checked', <%= visualization.config.showGrid || false %>);
        <% } %>
      <% } %>
    });

    // Update type description
    function updateTypeDescription(type) {
      const descriptions = {
        'bar': 'Vertical bars showing values across categories',
        'line': 'Connected data points showing trends over time',
        'pie': 'Circular chart showing proportions',
        'table': 'Tabular display of data',
        'heatmap': 'Color-coded matrix showing value density',
        'metric': 'Large number display with optional comparison'
      };
      $('#type-description').text(descriptions[type] || 'Advanced visualization');
    }

    // Refresh preview
    async function refreshPreview() {
      const datasetId = $('#dataset-select').val();
      const type = $('#viz-type').val();

      if (!datasetId || !type) {
        return;
      }

      try {
        // Get dataset data
        const dataset = await PulseAPI.datasets.get(datasetId);
        const data = dataset.data.cachedData || [];

        if (data.length === 0) {
          $('#preview-container').html('<p class="text-muted text-center">No data available in selected dataset</p>');
          return;
        }

        // Render based on type
        if (type === 'table') {
          renderTable(data);
        } else if (['heatmap', 'treemap', 'sunburst', 'sankey', 'network', 'chord', 'calendar', 'geographic'].includes(type)) {
          $('#preview-container').html(`<p class="text-muted text-center">D3.js preview for ${type} coming soon</p>`);
        } else {
          renderChart(type, data);
        }
      } catch (error) {
        $('#preview-container').html(`<p class="text-danger text-center">Error: ${error.message}</p>`);
      }
    }

    // Render table
    function renderTable(data) {
      const columns = Object.keys(data[0]);
      let html = '<div class="table-responsive"><table class="table table-striped table-sm"><thead><tr>';

      columns.forEach(col => {
        html += `<th>${col}</th>`;
      });
      html += '</tr></thead><tbody>';

      data.slice(0, 20).forEach(row => {
        html += '<tr>';
        columns.forEach(col => {
          html += `<td>${row[col]}</td>`;
        });
        html += '</tr>';
      });

      html += '</tbody></table></div>';
      if (data.length > 20) {
        html += `<p class="text-muted text-center small">Showing 20 of ${data.length} rows</p>`;
      }

      $('#preview-container').html(html);
    }

    // Render chart
    function renderChart(type, data) {
      const xField = $('#data-x').val();
      const yField = $('#data-y').val();

      if (!xField || !yField) {
        $('#preview-container').html('<p class="text-muted text-center">Please specify X and Y axis fields</p>');
        return;
      }

      // Destroy existing chart
      if (currentChart) {
        currentChart.destroy();
      }

      const canvas = $('<canvas></canvas>');
      $('#preview-container').html(canvas);

      const chartData = {
        labels: data.map(row => row[xField]),
        datasets: [{
          label: yField,
          data: data.map(row => row[yField]),
          backgroundColor: getColorScheme($('#color-scheme').val(), 0.7),
          borderColor: getColorScheme($('#color-scheme').val(), 1),
          borderWidth: 1
        }]
      };

      currentChart = new Chart(canvas[0], {
        type: type === 'area' ? 'line' : type,
        data: chartData,
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: {
              display: $('#show-legend').is(':checked')
            }
          },
          scales: type !== 'pie' && type !== 'doughnut' ? {
            y: {
              beginAtZero: true,
              grid: {
                display: $('#show-grid').is(':checked')
              }
            }
          } : {}
        }
      });
    }

    // Get color scheme
    function getColorScheme(scheme, alpha) {
      const schemes = {
        'default': `rgba(54, 162, 235, ${alpha})`,
        'blue': `rgba(54, 162, 235, ${alpha})`,
        'green': `rgba(75, 192, 192, ${alpha})`,
        'red': `rgba(255, 99, 132, ${alpha})`,
        'rainbow': `rgba(255, 159, 64, ${alpha})`
      };
      return schemes[scheme] || schemes.default;
    }

    // Preview visualization
    function previewVisualization() {
      refreshPreview();
    }

    // Save visualization
    async function saveVisualization() {
      const name = $('#viz-name').val().trim();
      const datasetId = $('#dataset-select').val();
      const type = $('#viz-type').val();

      if (!name || !datasetId || !type) {
        PulseUtils.showAlert('Please fill in required fields', 'warning');
        return;
      }

      const vizData = {
        name,
        description: $('#viz-description').val().trim(),
        datasetId,
        type,
        renderer: ['heatmap', 'treemap', 'sunburst', 'sankey', 'network', 'chord', 'calendar', 'geographic'].includes(type) ? 'd3' : 'chartjs',
        dataMapping: {
          x: $('#data-x').val(),
          y: $('#data-y').val(),
          series: $('#data-series').val()
        },
        config: {
          colorScheme: $('#color-scheme').val(),
          height: parseInt($('#chart-height').val()),
          showLegend: $('#show-legend').is(':checked'),
          showGrid: $('#show-grid').is(':checked')
        }
      };

      try {
        PulseUtils.showLoading();

        let result;
        if (vizId) {
          result = await PulseAPI.visualizations.update(vizId, vizData);
        } else {
          result = await PulseAPI.visualizations.create(vizData);
        }

        PulseUtils.hideLoading();
        PulseUtils.showAlert('Visualization saved successfully', 'success');

        setTimeout(() => {
          window.location.href = '/visualizations';
        }, 1000);
      } catch (error) {
        PulseUtils.hideLoading();
        PulseUtils.showAlert('Failed to save visualization: ' + error.message, 'danger');
      }
    }
  </script>

  <%- include('../shared/body-extra') %>
</body>
</html>
