<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Exprsn Pulse</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/static/css/pulse.css">
</head>
<body>
  <!-- Navbar -->
  <%- include('shared/navbar') %>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
        <%- include('shared/sidebar') %>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="row justify-content-center mt-5">
          <div class="col-md-8 col-lg-6">
            <div class="card shadow">
              <div class="card-body text-center py-5">
                <% if (error.status === 404) { %>
                  <i class="bi bi-exclamation-triangle text-warning" style="font-size: 5rem;"></i>
                  <h1 class="display-4 mt-3">404</h1>
                  <h4>Page Not Found</h4>
                <% } else if (error.status === 403) { %>
                  <i class="bi bi-shield-x text-danger" style="font-size: 5rem;"></i>
                  <h1 class="display-4 mt-3">403</h1>
                  <h4>Access Denied</h4>
                <% } else if (error.status === 500) { %>
                  <i class="bi bi-bug text-danger" style="font-size: 5rem;"></i>
                  <h1 class="display-4 mt-3">500</h1>
                  <h4>Internal Server Error</h4>
                <% } else { %>
                  <i class="bi bi-exclamation-circle text-danger" style="font-size: 5rem;"></i>
                  <h1 class="display-4 mt-3"><%= error.status || 'Error' %></h1>
                  <h4>Something Went Wrong</h4>
                <% } %>

                <p class="mt-3 text-muted">
                  <%= error.message || 'An unexpected error occurred' %>
                </p>

                <div class="mt-4">
                  <a href="/" class="btn btn-primary">
                    <i class="bi bi-house"></i> Go Home
                  </a>
                  <button class="btn btn-outline-secondary" onclick="history.back()">
                    <i class="bi bi-arrow-left"></i> Go Back
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
