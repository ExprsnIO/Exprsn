<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Exprsn Pulse - Analytics & Business Intelligence Platform">
  <title><%= title || 'Exprsn Pulse' %> - Analytics Platform</title>

  <!-- Bootstrap 5.3 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">

  <!-- Chart.js -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.min.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/static/css/pulse.css">

  <%- include('head-extra') %>
</head>
<body>
  <!-- Navigation -->
  <%- include('navbar') %>

  <!-- Main Content -->
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <%- include('sidebar') %>
      </nav>

      <!-- Main Content Area -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <!-- Breadcrumb -->
        <% if (locals.breadcrumbs) { %>
        <nav aria-label="breadcrumb" class="mt-3">
          <ol class="breadcrumb">
            <% breadcrumbs.forEach((crumb, index) => { %>
              <li class="breadcrumb-item <%= index === breadcrumbs.length - 1 ? 'active' : '' %>">
                <% if (crumb.url && index !== breadcrumbs.length - 1) { %>
                  <a href="<%= crumb.url %>"><%= crumb.label %></a>
                <% } else { %>
                  <%= crumb.label %>
                <% } %>
              </li>
            <% }) %>
          </ol>
        </nav>
        <% } %>

        <!-- Alerts -->
        <div id="alert-container"></div>

        <!-- Page Content -->
        <div class="py-4">
          <%- body %>
        </div>
      </main>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer mt-auto py-3 bg-light">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6">
          <span class="text-muted">Exprsn Pulse v1.0.0 &copy; 2025</span>
        </div>
        <div class="col-md-6 text-end">
          <span class="text-muted" id="realtime-status">
            <i class="bi bi-circle-fill text-secondary"></i> Disconnected
          </span>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- jQuery (for convenience) -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

  <!-- D3.js -->
  <script src="https://d3js.org/d3.v7.min.js"></script>

  <!-- Socket.IO Client -->
  <script src="https://cdn.socket.io/4.6.0/socket.io.min.js"></script>

  <!-- Custom JS -->
  <script src="/static/js/pulse-core.js"></script>
  <script src="/static/js/pulse-charts.js"></script>
  <script src="/static/js/pulse-realtime.js"></script>

  <%- include('body-extra') %>
</body>
</html>
