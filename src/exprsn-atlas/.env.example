# Environment
NODE_ENV=development

# Server Configuration
PORT=3018
HOST=0.0.0.0

# Database Configuration (PostgreSQL with PostGIS)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exprsn_atlas
DB_USER=postgres
DB_PASSWORD=your_password
DB_LOGGING=false
DB_POOL_MAX=10
DB_POOL_MIN=2

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Certificate Authority
CA_URL=http://localhost:3000
CA_OCSP_URL=http://localhost:2560

# Geocoding Configuration
GEOCODING_PROVIDER=openstreetmap
GEOCODING_API_KEY=
GEOCODING_TIMEOUT=5000

# Mapping Configuration
MAP_DEFAULT_ZOOM=12
MAP_MAX_ZOOM=18
MAP_MIN_ZOOM=1
TILE_PROVIDER=openstreetmap
TILE_API_KEY=

# Routing Configuration
ROUTING_PROVIDER=osrm
OSRM_URL=http://router.project-osrm.org
ROUTING_MAX_WAYPOINTS=25

# Spatial Configuration
SPATIAL_DEFAULT_SRID=4326
SPATIAL_MAX_RADIUS_KM=500
SPATIAL_DEFAULT_RADIUS_KM=50
ELEVATION_PROVIDER=open-elevation
ELEVATION_API_URL=https://api.open-elevation.com/api/v1/lookup

# Feature Flags
FEATURE_GEOCODING=true
FEATURE_ROUTING=true
FEATURE_ELEVATION=true
FEATURE_GEOFENCING=true
FEATURE_HEATMAPS=true

# CORS
CORS_ORIGIN=*
