<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-md-block sidebar collapse">
        <div class="position-sticky pt-3">
          <h5 class="px-3 text-primary">
            <i class="bi bi-cloud"></i> Bluesky PDS
          </h5>
          <ul class="nav flex-column mt-4">
            <li class="nav-item">
              <a class="nav-link" href="/admin">
                <i class="bi bi-speedometer2"></i> Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/accounts">
                <i class="bi bi-people"></i> Accounts
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/events">
                <i class="bi bi-activity"></i> Events
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/queues">
                <i class="bi bi-list-task"></i> Queues
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-10 ms-sm-auto px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2"><%= title %></h1>
        </div>
