# exprsn-bluesky Environment Configuration
# Copy this file to .env or .env.production and configure for your environment

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3018

# ============================================
# TLS/HTTPS Configuration
# ============================================
# Enable TLS/HTTPS (set to 'true' to enable)
TLS_ENABLED=false

# Optional: Provide your own TLS certificate paths
# If not provided, a self-signed certificate will be auto-generated for localhost
TLS_CERT_PATH=
TLS_KEY_PATH=

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exprsn_bluesky
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ============================================
# Redis Configuration
# ============================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# BlueSky PDS Configuration
# ============================================
BLUESKY_DOMAIN=exprsn.io
PDS_ENDPOINT=https://pds.exprsn.io

# ============================================
# JWT Configuration
# ============================================
# Generate secure secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=30d

# ============================================
# Encryption Configuration
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# ============================================
# External Service URLs
# ============================================
CA_URL=http://localhost:3000
AUTH_URL=http://localhost:3001
TIMELINE_URL=http://localhost:3004
HERALD_URL=http://localhost:3014
FILEVAULT_URL=http://localhost:3007
SPARK_URL=http://localhost:3002
MODERATOR_URL=http://localhost:3006
WORKFLOW_URL=http://localhost:3017

# ============================================
# Feature Flags
# ============================================
FIREHOSE_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# ============================================
# Security Configuration
# ============================================
CORS_ORIGIN=https://exprsn.io,https://www.exprsn.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits (bytes)
MAX_UPLOAD_SIZE=10485760

# ============================================
# Session Configuration
# ============================================
SESSION_TTL=2592000

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
