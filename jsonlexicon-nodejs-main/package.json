{
  "name": "exprsn-platform",
  "version": "1.0.0",
  "description": "Exprsn Certificate Authority and Token Platform - Node.js Implementation",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "bin": {
    "exprsn-deploy": "./cli/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:socket": "NODE_ENV=development SERVICE_TYPE=socket nodemon src/index.js",
    "dev:worker": "NODE_ENV=development SERVICE_TYPE=webhook-worker nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/migrate.js --rollback",
    "seed": "node scripts/seed.js",
    "cert:generate": "node scripts/generate-certs.js",
    "cert:ca": "bash scripts/setup-ca.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose up -d --build",
    "deploy": "node cli/index.js"
  },
  "keywords": [
    "certificate-authority",
    "token-authentication",
    "api-gateway",
    "json-lexicon",
    "oauth2",
    "mtls",
    "websocket",
    "webhook"
  ],
  "author": "Exprsn Engineering Team",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "amqplib": "^0.10.3",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "inquirer": "^8.2.6",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.44",
    "morgan": "^1.10.0",
    "node-forge": "^1.3.1",
    "node-ssh": "^13.1.0",
    "ora": "^5.4.1",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "retry": "^0.13.1",
    "socket.io": "^4.6.1",
    "socket.io-redis": "^6.1.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
